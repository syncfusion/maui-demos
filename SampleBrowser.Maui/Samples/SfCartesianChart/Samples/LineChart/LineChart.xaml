<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.SfCartesianChart.LineChart"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.SfCartesianChart"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                       xmlns:chart="http://schemas.syncfusion.com/maui">
    <localCore:SampleView.Content>
        <localCore:ScrollViewExt>
            <VerticalStackLayout BackgroundColor="White">
                <localCore:CardViewExt Title="Default Line" x:Name="extendedCard1" HeightRequest="400" HorizontalOptions="FillAndExpand">
                    <localCore:CardViewExt.MainContent>
                            <chart:SfCartesianChart MinimumHeightRequest="310" Palette="Custom" CustomBrushes="{Binding CustomBrushes}" x:Name="Chart" 
                                                    HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <chart:SfCartesianChart.BindingContext>
                                <local:LineSeriesViewModel/>
                            </chart:SfCartesianChart.BindingContext>
                            <chart:SfCartesianChart.Legend>
                                <chart:ChartLegend ToggleSeriesVisibility="True"/>
                            </chart:SfCartesianChart.Legend>
                                <chart:SfCartesianChart.Title>
                                    <Label Text="Inflation - Consumer Prices" Margin="0" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                                </chart:SfCartesianChart.Title>
                                <chart:SfCartesianChart.PrimaryAxis>
                                    <chart:CategoryAxis ShowMajorGridLines="false" Interval="2" PlotOffsetStart="10" PlotOffsetEnd="10" AxisLineOffset="10">
                                        <chart:CategoryAxis.MajorTickStyle>
                                            <chart:ChartAxisTickStyle TickSize="10">
                                            </chart:ChartAxisTickStyle>
                                        </chart:CategoryAxis.MajorTickStyle>
                                    </chart:CategoryAxis>
                                </chart:SfCartesianChart.PrimaryAxis>
                                <chart:SfCartesianChart.SecondaryAxis>
                                    <chart:NumericalAxis Maximum="100" Minimum="0" Interval="20">
                                        <chart:NumericalAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle LabelFormat="0'%"/>
                                        </chart:NumericalAxis.LabelStyle>
                                        <chart:NumericalAxis.AxisLineStyle>
                                            <chart:ChartLineStyle StrokeWidth="0">
                                            </chart:ChartLineStyle>
                                        </chart:NumericalAxis.AxisLineStyle>
                                        <chart:NumericalAxis.MajorTickStyle>
                                            <chart:ChartAxisTickStyle TickSize="0" />
                                        </chart:NumericalAxis.MajorTickStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.SecondaryAxis>
                                <chart:SfCartesianChart.Series>
                                <chart:LineSeries x:Name="lineSeries1" Label="Germany" ShowTooltip="True" StrokeWidth="1" ItemsSource="{Binding LineData1}" XBindingPath="Name" YBindingPath="Value">
                                    </chart:LineSeries>
                                <chart:LineSeries x:Name="lineSeries2" Label="England" ShowTooltip="True" StrokeWidth="1" ItemsSource="{Binding LineData2}" XBindingPath="Name" YBindingPath="Value">
                                    </chart:LineSeries>

                                <chart:ScatterSeries x:Name="scatter1" IsVisible="{Binding IsVisible, Source={x:Reference lineSeries1}}" IsVisibleOnLegend="False" ItemsSource="{Binding LineData1}" Width="8" Height="8" Background="white" Stroke="#314A6E" XBindingPath="Name" YBindingPath="Value" StrokeWidth="1">
                                    </chart:ScatterSeries>
                                <chart:ScatterSeries x:Name="scatter2" IsVisible="{Binding IsVisible, Source={x:Reference lineSeries2}}" IsVisibleOnLegend="False" ItemsSource="{Binding LineData2}" Width="8" Height="8" Background="white" Stroke="#48988B" XBindingPath="Name" YBindingPath="Value" StrokeWidth="1">
                                    </chart:ScatterSeries>

                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>
                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>

                <localCore:CardViewExt Title="Line with dashes" x:Name="extendedCard2" HorizontalOptions="FillAndExpand" HeightRequest="400">
                    <localCore:CardViewExt.MainContent>
                            <chart:SfCartesianChart MinimumHeightRequest="310" x:Name="Chart1" Palette="Custom" CustomBrushes="{Binding CustomBrushes}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <chart:SfCartesianChart.BindingContext>
                                <local:LineSeriesViewModel/>
                            </chart:SfCartesianChart.BindingContext>
                            <chart:SfCartesianChart.Resources>
                                <DoubleCollection x:Key="dashArray">
                                    <x:Double>6</x:Double>
                                    <x:Double>3</x:Double>
                                    <x:Double>3</x:Double>
                                    <x:Double>3</x:Double>
                                </DoubleCollection>
                            </chart:SfCartesianChart.Resources>
                            <chart:SfCartesianChart.Legend>
                                <chart:ChartLegend ToggleSeriesVisibility="True"/>
                            </chart:SfCartesianChart.Legend>
                                <chart:SfCartesianChart.Title>
                                    <Label Text="Capital Investment as a Share of Exports" Margin="0" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                                </chart:SfCartesianChart.Title>
                                <chart:SfCartesianChart.PrimaryAxis>
                                    <chart:NumericalAxis Interval="2" Maximum="2016" Minimum="2010" ShowMajorGridLines="false" PlotOffsetEnd="10" PlotOffsetStart="10" AxisLineOffset="10">
                                        <chart:NumericalAxis.MajorTickStyle>
                                            <chart:ChartAxisTickStyle TickSize="10">
                                            </chart:ChartAxisTickStyle>
                                        </chart:NumericalAxis.MajorTickStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.PrimaryAxis>
                                <chart:SfCartesianChart.SecondaryAxis>
                                    <chart:NumericalAxis Interval="3" Maximum="21" Minimum="3" >
                                        <chart:NumericalAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle LabelFormat="0'%"/>
                                        </chart:NumericalAxis.LabelStyle>
                                        <chart:NumericalAxis.AxisLineStyle>
                                            <chart:ChartLineStyle StrokeWidth="0">
                                            </chart:ChartLineStyle>
                                        </chart:NumericalAxis.AxisLineStyle>
                                        <chart:NumericalAxis.MajorTickStyle>
                                            <chart:ChartAxisTickStyle TickSize="0" />
                                        </chart:NumericalAxis.MajorTickStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.SecondaryAxis>
                                <chart:SfCartesianChart.Series>
                                <chart:LineSeries x:Name="lineSeries3" Label="Singapore" StrokeDashArray="{StaticResource dashArray}" ShowTooltip="True" StrokeWidth="1" ItemsSource="{Binding DashedLine}" XBindingPath="Data" YBindingPath="High">
                                    </chart:LineSeries>
                                <chart:LineSeries x:Name="lineSeries4" Label="Saudi Arabia" StrokeDashArray="{StaticResource dashArray}" ShowTooltip="True" StrokeWidth="1" ItemsSource="{Binding DashedLine}" XBindingPath="Data" YBindingPath="Low">
                                    </chart:LineSeries>
                                <chart:LineSeries x:Name="lineSeries5" Label="Spain" StrokeDashArray="{StaticResource dashArray}" ShowTooltip="True" StrokeWidth="1" ItemsSource="{Binding DashedLine}" XBindingPath="Data" YBindingPath="Value">
                                    </chart:LineSeries>
                                <chart:LineSeries x:Name="lineSeries6" Label="Portugal" StrokeDashArray="{StaticResource dashArray}" ShowTooltip="True" StrokeWidth="1" ItemsSource="{Binding DashedLine}" XBindingPath="Data" YBindingPath="Size">
                                    </chart:LineSeries>

                                <chart:ScatterSeries x:Name="scatter3" IsVisible="{Binding IsVisible, Source={x:Reference lineSeries3}}" IsVisibleOnLegend="False" Width="8" Height="8" ItemsSource="{Binding DashedLine}" Background="White" Stroke="#314A6E" XBindingPath="Data" YBindingPath="High" StrokeWidth="1">
                                    </chart:ScatterSeries>
                                <chart:ScatterSeries x:Name="scatter4" IsVisible="{Binding IsVisible, Source={x:Reference lineSeries4}}" IsVisibleOnLegend="False" Width="8" Height="8" ItemsSource="{Binding DashedLine}" Background="White" Stroke="#48988B" XBindingPath="Data" YBindingPath="Low" StrokeWidth="1">
                                    </chart:ScatterSeries>
                                <chart:ScatterSeries x:Name="scatter5" IsVisible="{Binding IsVisible, Source={x:Reference lineSeries5}}" IsVisibleOnLegend="False" Width="8" Height="8" ItemsSource="{Binding DashedLine}" Background="White" Stroke="#5E498C" XBindingPath="Data" YBindingPath="Value" StrokeWidth="1">
                                    </chart:ScatterSeries>
                                <chart:ScatterSeries x:Name="scatter6" IsVisible="{Binding IsVisible, Source={x:Reference lineSeries6}}" IsVisibleOnLegend="False" Width="8" Height="8" ItemsSource="{Binding DashedLine}" Background="White" Stroke="#74BD6F" XBindingPath="Data" YBindingPath="Size" StrokeWidth="1">
                                    </chart:ScatterSeries>

                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>
                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>

                <localCore:CardViewExt x:Name="extendedCard3" Title="Vertical line" HorizontalOptions="FillAndExpand" HeightRequest="400">
                    <localCore:CardViewExt.MainContent>
                        <chart:SfCartesianChart x:Name="chart3" MinimumHeightRequest="310" Palette="Custom" CustomBrushes="{Binding CustomBrushes}" IsTransposed="True" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <chart:SfCartesianChart.BindingContext>
                                <local:LineSeriesViewModel x:Name="viewModel"/>
                            </chart:SfCartesianChart.BindingContext>
                            <chart:SfCartesianChart.Title>
                                <Label Text="Seismograph Analysis of Country" Margin="0,0,0,5" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                            </chart:SfCartesianChart.Title>
                            <chart:SfCartesianChart.PrimaryAxis>
                                <chart:NumericalAxis ShowMajorGridLines="False">
                                    <chart:NumericalAxis.Title>
                                        <chart:ChartAxisTitle Text="Time (s)" />
                                    </chart:NumericalAxis.Title>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.PrimaryAxis>
                            <chart:SfCartesianChart.SecondaryAxis>
                                <chart:NumericalAxis ShowMajorGridLines="False" Maximum="15" Minimum="-15">
                                    <chart:NumericalAxis.Title>
                                        <chart:ChartAxisTitle Margin="5,10,5,2" Text="Velocity (m/s)">
                                        </chart:ChartAxisTitle>
                                    </chart:NumericalAxis.Title>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.SecondaryAxis>
                            <chart:SfCartesianChart.Series>
                                <chart:LineSeries Label="Indonesia" EnableAnimation="False" ItemsSource="{Binding verticalChart}" XBindingPath="Value" YBindingPath="Size"/>
                            </chart:SfCartesianChart.Series>
                        </chart:SfCartesianChart>

                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>

                <localCore:CardViewExt Title="Dynamic update animation" x:Name="extendedCard4" HorizontalOptions="FillAndExpand" HeightRequest="400">
                    <localCore:CardViewExt.MainContent>
                        <chart:SfCartesianChart x:Name="Chart4" MinimumHeightRequest="310" Palette="Custom" CustomBrushes="{Binding CustomBrushes}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <chart:SfCartesianChart.BindingContext>
                                <local:DynamicAnimationViewModel x:Name="viewModel1"/>
                            </chart:SfCartesianChart.BindingContext>
                            <chart:SfCartesianChart.Title>
                                <Label Text="Line Chart Dynamic Animation" Margin="0,0,0,5" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                            </chart:SfCartesianChart.Title>
                            <chart:SfCartesianChart.PrimaryAxis>
                                <chart:NumericalAxis ShowMajorGridLines="False">
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.PrimaryAxis>
                            <chart:SfCartesianChart.SecondaryAxis>
                                <chart:NumericalAxis ShowMajorGridLines="True" Maximum="100" Interval="20" Minimum="0">
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.SecondaryAxis>
                            <chart:SfCartesianChart.Series>
                                <chart:LineSeries ItemsSource="{Binding MotionAnimation}" EnableAnimation="True" XBindingPath="Value" YBindingPath="Size"/>
                            </chart:SfCartesianChart.Series>
                        </chart:SfCartesianChart>
                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>
            </VerticalStackLayout>
        </localCore:ScrollViewExt>
    </localCore:SampleView.Content>
</localCore:SampleView>
