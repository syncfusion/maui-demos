<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.Pdf.Encryption"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.Pdf"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core">
    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="description" Text="This demo shows how to encrypt the existing PDF document with encryption standards like 40-bit RC4, 128-bit RC4, 128-bit AES, 256-bit AES, and advanced encryption standard 256-bit AES Revision 6 (PDF 2.0) to protect documents against unauthorized access." VerticalOptions="Center" TextColor="Black">
            </Label>
            <Label x:Name="label1" Text=" " VerticalOptions="Center"></Label>

            <Label x:Name="buttonDescription" Text="Please click the Generate PDF button to save and view the PDF document generated by Syncfusion PDF library."
                  VerticalOptions="Center" TextColor="Black" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label2" Text=" " VerticalOptions="Center"></Label>
            <Label x:Name="user" Text="User password: password@123"
                 VerticalOptions="Center" TextColor="Black"/>
            <Label x:Name="label3" Text=" " VerticalOptions="Center"></Label>
            <Label x:Name="owner" Text="Owner password: syncfusion"
                 VerticalOptions="Center" TextColor="Black"/>
            <Label x:Name="label4" Text=" " VerticalOptions="Center"></Label>
            <Button x:Name="generateDocument" Clicked ="OnButtonClicked" Text ="Generate PDF" HorizontalOptions="Start"></Button>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>
