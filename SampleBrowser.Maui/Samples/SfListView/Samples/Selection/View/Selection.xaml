<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.SfListView.Selection"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SampleBrowser.Maui.SfListView"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
             xmlns:ListView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView">
    <localCore:SampleView.Behaviors>
        <local:SfListViewSelectionBehavior/>
    </localCore:SampleView.Behaviors>
    <localCore:SampleView.Resources>
        <ResourceDictionary>
            <local:IconColorConverter x:Key="IconColorConverter"/>
            <local:SelectionIconConverter x:Key="SelectionIconConverter"/>
            <DataTemplate x:Name="ItemTemplate" x:Key="ItemTemplate" >
                <Grid x:Name="grid" HeightRequest="65">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                    </Grid.RowDefinitions>
                    <Grid GridLayout.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Source="skyblue.png" HeightRequest="40" WidthRequest="40"
                            Grid.Column="0" GridLayout.Row="0" VerticalOptions="Center" HorizontalOptions="Center"/>
                        <Label VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" GridLayout.Row="0"
                   FontSize="{OnPlatform macOS=Large, Android=Large, iOS=Large, UWP=Medium, WPF=Medium}" Text ="&#xe718;" TextColor="White" FontFamily="{OnPlatform iOS=SB Icons, macOS=SB Icons, Android=SB Icons.ttf#}"/>
                        <Grid Grid.Column="1" GridLayout.Row="0" Padding="10,10,15,10" RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>

                            <Label LineBreakMode="TailTruncation"
                     TextColor="#DE000000"
                     Text="{Binding SongTitle}" 
                                   FontFamily="Roboto"
                               FontSize="{OnPlatform Android={OnIdiom Phone=16, Tablet=18}, iOS={OnIdiom Phone=16, Tablet=20}, macOS=20}" />
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label TextColor="#99000000" 
                                       Grid.Column="0"
                                       LineBreakMode="NoWrap"                               
                                       FontFamily="Roboto"
                                       Text="{Binding SongAuther}"
                               FontSize="{OnPlatform Android={OnIdiom Phone=14, Tablet=14}, iOS={OnIdiom Phone=12, Tablet=14}, macOS=14}" />
                                <Label TextColor="#99000000"
                       Grid.Column="1"
                       LineBreakMode="NoWrap"
                                       HorizontalOptions="End"
                       HorizontalTextAlignment="End"
                        FontFamily="Roboto"
                       Text="{Binding SongSize}"
                               FontSize="{OnPlatform Android={OnIdiom Phone=12, Tablet=14}, iOS={OnIdiom Phone=12, Tablet=14}, macOS=14}" />
                            </Grid>
                        </Grid>
                        <Label GridLayout.Row="0" Grid.Column="2" WidthRequest="40" HeightRequest="40" HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="Center" VerticalTextAlignment="Center"
                               FontSize="{OnPlatform Android=Large, UWP=Medium, WPF=Medium, iOS=Large, macOS=Large}"
                               Text="{Binding IsSelected, Converter={StaticResource SelectionIconConverter}}" TextColor="{Binding Path=IsSelected, Converter={StaticResource IconColorConverter}}"
                               FontFamily="{OnPlatform iOS=Sync FontIcons, macOS=Sync FontIcons, Android=Sync FontIcons.ttf#}"/>
                    </Grid>
                    <StackLayout Grid.Row="1" BackgroundColor="#b3b3b3" HeightRequest="1"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
            <Grid Margin="0" RowSpacing="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid x:Name="headerGrid" BackgroundColor="#FFEEEEF2" GridLayout.Row="0" MaximumHeightRequest="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <Grid x:Name="selectAllIconParent" Grid.Column="1" HorizontalOptions="End" HeightRequest="50">
                    <Label x:Name="selectAllIcon"
                           FontSize="{OnPlatform Android=Large, UWP=Medium, WPF=Medium, iOS=Large, macOS=Large}"
                                Text="{Binding IsAllSelected, Converter={StaticResource SelectionIconConverter}}" 
                               TextColor="{Binding Path=IsAllSelected, Converter={StaticResource IconColorConverter}}"
                               FontFamily="{OnPlatform iOS=Sync FontIcons, macOS=Sync FontIcons, Android=Sync FontIcons.ttf#}"
            WidthRequest="30" HeightRequest="30"  VerticalTextAlignment="Center"       
            HorizontalOptions="Start" VerticalOptions="{OnPlatform Android=Center, iOS=Center}"
            />
                    </Grid>
                    <Label LineBreakMode="NoWrap" Grid.Column="0" TextColor="#DE000000"
            Margin="15,0,0,0" Text="{Binding HeaderInfo}"
            FontSize="16"  HorizontalOptions="Start" VerticalOptions="Center"/>
                </Grid>
                <ListView:SfListView x:Name="listView"
            Grid.Row="1"
            AutoFitMode="None"
            SelectionGesture="Tap"
            SelectionMode="Multiple"
            SelectedItems="{Binding SelectedItems}"
            SelectionBackground ="#E4E4E4"
            ItemTemplate="{StaticResource ItemTemplate}"
            ItemSize="65"
            IsStickyHeader="True" ItemsSource="{Binding MusicInfo}">
                </ListView:SfListView>
            </Grid>
    </localCore:SampleView.Content>
</localCore:SampleView>
