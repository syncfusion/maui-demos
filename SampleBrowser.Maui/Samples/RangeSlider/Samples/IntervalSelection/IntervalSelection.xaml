<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.RangeSlider.RangeSliderIntervalSelection"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                      xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders">

    <localCore:SampleView.Resources>
        <Style TargetType="sliders:SfRangeSlider">
            <Setter Property="EnableIntervalSelection" Value="True" />
            <Setter Property="ShowTicks" Value="True" />
            <Setter Property="ShowLabels" Value="True" />
            <Setter Property="MaximumWidthRequest" Value="400" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="MaximumWidthRequest" Value="400" />
            <!--To align the label and track vertically, used the slider thumb overlay radius on the label.-->
            <Setter Property="Padding" Value="24,0,0,0" />
        </Style>

    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <VerticalStackLayout Padding="10,0" Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Numeric" />
            <sliders:SfRangeSlider Minimum="0" 
                                   Maximum="100" 
                                   RangeStart="25" 
                                   RangeEnd="75"
                                   Interval="25" 
                                   StepSize="25" />

            <BoxView HeightRequest="15" />
            
            <Label Text="Date" />
            <sliders:SfRangeSlider Minimum="2010-01-01"
                                   Maximum="2018-01-01"
                                   RangeStart="2012-01-01"
                                   RangeEnd="2016-01-01"
                                   StepDuration="2"
                                   DateIntervalType="Years"  
                                   Interval="2" />
        </VerticalStackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>