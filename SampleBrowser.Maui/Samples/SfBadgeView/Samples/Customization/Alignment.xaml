<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                      x:Class="SampleBrowser.Maui.SfBadgeView.Alignment">

    <localCore:SampleView.Resources>
        <Style x:Key="DemoLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <VerticalStackLayout Spacing="20"
                             VerticalOptions="Center" 
                             HorizontalOptions="Center">
            <badge:SfBadgeView BadgeText="5"
                               HorizontalOptions="Center"
                               WidthRequest="140"
                               HeightRequest="70">
                <Grid BackgroundColor="#EEEEEE">
                    <Label Text="Start"
                           Style="{StaticResource DemoLabelStyle}" />
                </Grid>
                <badge:SfBadgeView.BadgeSettings>
                    <badge:BadgeSettings BadgeAlignment="Start" CornerRadius="0" />
                </badge:SfBadgeView.BadgeSettings>
            </badge:SfBadgeView>
            <badge:SfBadgeView BadgeText="5" Margin="-10,0,0,0"
                               HorizontalOptions="Center"
                               WidthRequest="130"
                               HeightRequest="60">
                <Grid BackgroundColor="#EEEEEE">
                    <Label Text="Center"
                           Style="{StaticResource DemoLabelStyle}" />
                </Grid>
                <badge:SfBadgeView.BadgeSettings>
                    <badge:BadgeSettings CornerRadius="0" />
                </badge:SfBadgeView.BadgeSettings>
            </badge:SfBadgeView>
            <badge:SfBadgeView BadgeText="5" Margin="-20,10,0,0"
                               HorizontalOptions="Center"
                               WidthRequest="120"
                               HeightRequest="50">
                <Grid BackgroundColor="#EEEEEE">
                    <Label Text="End"
                           Style="{StaticResource DemoLabelStyle}" />
                </Grid>
                <badge:SfBadgeView.BadgeSettings>
                    <badge:BadgeSettings BadgeAlignment="End" CornerRadius="0" />
                </badge:SfBadgeView.BadgeSettings>
            </badge:SfBadgeView>
        </VerticalStackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>