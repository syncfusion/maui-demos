<?xml version="1.0" encoding="UTF-8"?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                      x:Class="SampleBrowser.Maui.SfRadialGauge.Range"
                      xmlns:gauge="http://schemas.syncfusion.com/maui"
                      Background="White">
    <localCore:SampleView.Content>
        <localCore:ScrollViewExt>
            <localCore:WrapLayout Background="White">
                <localCore:CardViewExt HeightRequest="425"
                                       Title="Multiple ranges">
                    <localCore:CardViewExt.MainContent>
                        <gauge:SfRadialGauge x:Name="multiRangesGauge">
                            <gauge:SfRadialGauge.Axes>
                                <gauge:RadialAxis ShowAxisLine="False"
                                                  ShowLabels="False"
                                                  ShowTicks="False"
                                                  StartAngle="180"
                                                  EndAngle="360"
                                                  Minimum="0"
                                                  Maximum="80">

                                    <gauge:RadialAxis.Pointers>
                                        <gauge:NeedlePointer NeedleLengthUnit="Factor"
                                                             NeedleLength="0.7"
                                                             NeedleStartWidth="2"
                                                             NeedleEndWidth="15"
                                                             Value="30"
                                                             KnobSizeUnit="Factor"
                                                             KnobRadius="0.07">
                                        </gauge:NeedlePointer>
                                    </gauge:RadialAxis.Pointers>

                                    <gauge:RadialAxis.Ranges>
                                        <gauge:RadialRange StartValue="0"
                                                          EndValue="18"
                                                          WidthUnit="Factor"
                                                          StartWidth="0"
                                                          EndWidth="0.1"
                                                          Fill="#FFA8AAE2">
                                        </gauge:RadialRange>
                                        <gauge:RadialRange StartValue="20"
                                                          EndValue="38"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.1"
                                                          EndWidth="0.15"
                                                          Fill="#FFa8aae2">
                                        </gauge:RadialRange>
                                        <gauge:RadialRange StartValue="40"
                                                          EndValue="58"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.15"
                                                          EndWidth="0.2"
                                                          Fill="#FF7B7DC7">
                                        </gauge:RadialRange>
                                        <gauge:RadialRange StartValue="60"
                                                          EndValue="78"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.2"
                                                          EndWidth="0.25"
                                                          Fill="#FF4d4ca2">
                                        </gauge:RadialRange>
                                    </gauge:RadialAxis.Ranges>
                                </gauge:RadialAxis>
                            </gauge:SfRadialGauge.Axes>
                        </gauge:SfRadialGauge>
                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>

                <localCore:CardViewExt HeightRequest="425"
                                       Title="Range thickness">
                    <localCore:CardViewExt.MainContent>
                        <gauge:SfRadialGauge x:Name="rangeThicknessGauge">
                            <gauge:SfRadialGauge.Axes>
                                <gauge:RadialAxis ShowAxisLine="False"
                                                  TickPosition="Outside"
                                                  LabelPosition="Outside"
                                                  RadiusFactor="0.6"
                                                  CanRotateLabels="True"
                                                  MinorTicksPerInterval="5"
                                                  Interval="10"
                                                  UseRangeColorForAxis="True">
                                    <gauge:RadialAxis.MajorTickStyle>
                                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.1" />
                                    </gauge:RadialAxis.MajorTickStyle>
                                    <gauge:RadialAxis.MinorTickStyle>
                                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.04" />
                                    </gauge:RadialAxis.MinorTickStyle>
                                    <gauge:RadialAxis.Ranges>
                                        <gauge:RadialRange StartValue="30"
                                                          EndValue="100"
                                                          WidthUnit="Factor"
                                                          OffsetUnit="Factor"
                                                          StartWidth="0.05"
                                                          EndWidth="0.2"
                                                          RangeOffset="0.05"
                                                          Fill="#FF289AB1">
                                            <gauge:RadialRange.GradientStops>
                                                <gauge:GaugeGradientStop Value="48"
                                                                         Color="#FF289AB1">
                                                </gauge:GaugeGradientStop>
                                                <gauge:GaugeGradientStop Value="83"
                                                                         Color="#FF43E695">
                                                </gauge:GaugeGradientStop>
                                            </gauge:RadialRange.GradientStops>
                                        </gauge:RadialRange>
                                    </gauge:RadialAxis.Ranges>
                                    <gauge:RadialAxis.Pointers>
                                        <gauge:NeedlePointer Value="70"
                                                             EnableAnimation="True"
                                                             NeedleStartWidth="2"
                                                             NeedleEndWidth="10"
                                                             NeedleLengthUnit="Factor"
                                                             NeedleLength="0.75"
                                                             TailLengthUnit="Factor"
                                                             TailLength="0.15"
                                                             TailWidth="10"
                                                             KnobSizeUnit="Factor"
                                                             KnobRadius="0.06">
                                        </gauge:NeedlePointer>
                                    </gauge:RadialAxis.Pointers>
                                </gauge:RadialAxis>
                            </gauge:SfRadialGauge.Axes>
                        </gauge:SfRadialGauge>
                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>

                <localCore:CardViewExt HeightRequest="425"
                                       Title="Range label">
                    <localCore:CardViewExt.MainContent>
                        <gauge:SfRadialGauge x:Name="rangeLabelGauge">
                            <gauge:SfRadialGauge.Axes>
                                <gauge:RadialAxis ShowLabels="False"
                                                  ShowAxisLine="False"
                                                  ShowTicks="False"
                                                  Minimum="0"
                                                  Maximum="100"
                                                  StartAngle="180"
                                                  EndAngle="360">

                                    <gauge:RadialAxis.Ranges>
                                        <gauge:RadialRange StartValue="0"
                                                          EndValue="33"
                                                          Label="SLOW"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.35"
                                                          EndWidth="0.35"
                                                          Fill="#FFFE2A25" />
                                        <gauge:RadialRange StartValue="33"
                                                          EndValue="66"
                                                          Label="MODERATE"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.35"
                                                          EndWidth="0.35"
                                                          Fill="#FFFFBA00" />
                                        <gauge:RadialRange StartValue="66"
                                                          EndValue="100"
                                                          Label="FAST"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.35"
                                                          EndWidth="0.35"
                                                          Fill="#FF00AB47" />
                                    </gauge:RadialAxis.Ranges>

                                    <gauge:RadialAxis.Pointers>
                                        <gauge:NeedlePointer Value="75"
                                                             NeedleLength="0.8"
                                                             NeedleStartWidth="2"
                                                             NeedleEndWidth="39"
                                                             KnobRadius="24"
                                                             KnobStrokeThickness="6"
                                                             KnobFill="White"
                                                             EnableAnimation="True"
                                                             KnobSizeUnit="Pixel" />
                                    </gauge:RadialAxis.Pointers>
                                </gauge:RadialAxis>
                            </gauge:SfRadialGauge.Axes>
                        </gauge:SfRadialGauge>
                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>
            </localCore:WrapLayout>
        </localCore:ScrollViewExt>
    </localCore:SampleView.Content>
</localCore:SampleView>