<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.SfCircularChart.Tooltip"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.SfCircularChart"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                       xmlns:chart="http://schemas.syncfusion.com/maui"
    BackgroundColor="White">
    <localCore:SampleView.Content>
        <localCore:ScrollViewExt>
            <localCore:WrapLayout BackgroundColor="White">
                <localCore:CardViewExt Title="Tooltip template" x:Name="extendedCard1" HeightRequest="400" HorizontalOptions="FillAndExpand">
                    <localCore:CardViewExt.MainContent>
                        <chart:SfCircularChart x:Name="Chart" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <chart:SfCircularChart.Resources>
                                <ResourceDictionary>
                                    <DataTemplate x:Key="template1">
                                        <StackLayout Padding="3">
                                            <StackLayout Orientation="Horizontal"  VerticalOptions="FillAndExpand" Spacing="0" Padding="0" Margin="0">
                                                <Label Text="{Binding Item.Name}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" TextColor="#CCCCCC" FontAttributes="Bold" FontFamily="Helvetica" FontSize="14" Margin="2,0,2,0" />
                                                <Label Text="{Binding Item.Value,StringFormat=' :  {0}%'}" VerticalTextAlignment="Center" HorizontalOptions="EndAndExpand" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,0,2,0" FontSize="14" />
                                            </StackLayout>
                                        </StackLayout>
                                    </DataTemplate>
                                </ResourceDictionary>
                            </chart:SfCircularChart.Resources>
                            <chart:SfCircularChart.Title>
                                <Label Text="Sales by Sales Person" Margin="0,0,6,10" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                            </chart:SfCircularChart.Title>
                            <chart:SfCircularChart.BindingContext>
                                <local:PieSeriesViewModel/>
                            </chart:SfCircularChart.BindingContext>
                            <chart:SfCircularChart.Legend>
                                <chart:ChartLegend/>
                            </chart:SfCircularChart.Legend>
                            <chart:SfCircularChart.Series>
                                <chart:PieSeries CircularCoefficient="0.9" ShowTooltip="True" TooltipTemplate="{StaticResource template1}" x:Name="pieSeries" Palette="Custom" CustomBrushes="{Binding CustomBrushes}" StrokeWidth="2" Stroke="White" EnableAnimation="{Binding EnableAnimation}" ItemsSource="{Binding PieSeriesData}" XBindingPath="Name" YBindingPath="Value">
                                </chart:PieSeries>
                            </chart:SfCircularChart.Series>
                        </chart:SfCircularChart>

                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>
       </localCore:WrapLayout>
        </localCore:ScrollViewExt>
    </localCore:SampleView.Content>
</localCore:SampleView>