<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.VerticalRangeSlider.RangeSliderDividerLabelTick"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                      xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders">

    <localCore:SampleView.Resources>
        <Style TargetType="sliders:SfRangeSlider">
            <Setter Property="Minimum" Value="0" />
            <Setter Property="Maximum" Value="100" />
            <Setter Property="RangeStart" Value="25" />
            <Setter Property="RangeEnd" Value="75" />
            <Setter Property="Interval" Value="25" />
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="MaximumHeightRequest" Value="300" />
        </Style>

        <Style TargetType="VerticalStackLayout">
            <Setter Property="Padding" Value="15" />
            <Setter Property="Spacing" Value="10" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <VerticalStackLayout VerticalOptions="Center">
            <HorizontalStackLayout Padding="15,0" Spacing="30" HorizontalOptions="Center">
                <VerticalStackLayout>
                    <sliders:SfRangeSlider ShowDividers="True" 
                                           IsInversed="{Binding Source={x:Reference inversedCheckBox}, Path=IsChecked}" />
                    <Label Text="Dividers" />
                </VerticalStackLayout>

                <VerticalStackLayout >
                    <sliders:SfRangeSlider ShowLabels="True"
                                           IsInversed="{Binding Source={x:Reference inversedCheckBox}, Path=IsChecked}" />
                    <Label Text="Labels" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <sliders:SfRangeSlider Minimum="-50" 
                                           Maximum="50" 
                                           RangeStart="-25" 
                                           RangeEnd="25" 
                                           ShowTicks="True" 
                                           ShowLabels="True" 
                                           IsInversed="{Binding Source={x:Reference inversedCheckBox}, Path=IsChecked}" />
                    <Label Text="Ticks" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <GridLayout ColumnDefinitions="Auto, Auto" HorizontalOptions="Center">
                <Label GridLayout.Column="0" Text="Inversed" Padding="5" VerticalOptions="Center" VerticalTextAlignment="Center" />
                <CheckBox x:Name="inversedCheckBox" GridLayout.Column="1" Color="#2196F3" />
            </GridLayout>
        </VerticalStackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>
