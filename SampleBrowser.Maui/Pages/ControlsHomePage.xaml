<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:local="clr-namespace:SampleBrowser.Maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.ControlsHomePage"
             xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:core="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
             Title=".NET MAUI Controls Demo (Preview)"
             BackgroundColor="White"
             Padding="0" >
    <ContentPage.BindingContext>
        <local:ControlPageViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Style x:Key="descriptionLabel" TargetType="Label">
            <Setter Property="FontSize" Value="{OnPlatform iOS='12', Default='10'}"/>
        </Style>
        <Style x:Key="badgeSetting" TargetType="badge:SfBadgeView">
            <Setter Property="BadgeText" Value="{Binding TagType}"/>
            <Setter Property="BadgeSettings">
                <Setter.Value>
                    <badge:BadgeSettings Background="#608C1B"  
                                         Offset="-10,9" 
                                         Type="None" 
                                         AutoHide="True"
                                         TextPadding="{OnPlatform Android='5', iOS='5', UWP='1,1,1,1' }"
                                         Animation="None">
                            <badge:BadgeSettings.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
				    <On Platform="MacCatalyst" Value="10"/>
                                    <On Platform="iOS" Value="{OnIdiom Phone=12,Default=10}"/>
                                    <On Platform="Android" Value="12"/>
                                    <On Platform="UWP" Value="10"/>
                                </OnPlatform>

                        </badge:BadgeSettings.FontSize>
                        </badge:BadgeSettings>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>
