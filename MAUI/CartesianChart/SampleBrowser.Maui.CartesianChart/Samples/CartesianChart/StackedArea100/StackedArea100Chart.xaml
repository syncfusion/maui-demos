<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.CartesianChart.SfCartesianChart.StackedArea100Chart"
             xmlns:local="clr-namespace:SampleBrowser.Maui.CartesianChart.SfCartesianChart"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             xmlns:converter="clr-namespace:Syncfusion.Maui.Core.Converters;assembly=Syncfusion.Maui.Core"
             xmlns:chart="http://schemas.syncfusion.com/maui">
    <localCore:SampleView.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <local:StackedArea100ViewModel/>
            </StackLayout.BindingContext>
            <chart:SfCartesianChart x:Name="Chart" PaletteBrushes="{Binding PaletteBrushes}" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" >
                <chart:SfCartesianChart.Resources>
                    <ResourceDictionary>
                        <DataTemplate x:Key="template1">
                            <StackLayout>
                                <Label Text="Peru" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="75"/>
                                <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                    <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#314A6E" Margin="0,1,3,0"/>
                                    <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0" />
                                    <Label Text="{Binding Item.Peru,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                        <DataTemplate x:Key="template2">
                            <StackLayout>
                                <Label Text="Canada" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="75"/>
                                <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                    <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#48988B" Margin="0,1,3,0"/>
                                    <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0" />
                                    <Label Text="{Binding Item.Canada,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                        <DataTemplate x:Key="template3">
                            <StackLayout>
                                <Label Text="Ethiopia" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="75" />
                                <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                    <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#5E498C" Margin="0,1,3,0"/>
                                    <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0"/>
                                    <Label Text="{Binding Item.Ethiopia,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                        <DataTemplate x:Key="template4">
                            <StackLayout>
                                <Label Text="Mali" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="75" />
                                <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                    <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#74BD6F" Margin="0,1,3,0"/>
                                    <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0"/>
                                    <Label Text="{Binding Item.Mali,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                    </ResourceDictionary>
                </chart:SfCartesianChart.Resources>
                <chart:SfCartesianChart.Title>
                    <Label Text="Methane Emission" Margin="0" HorizontalOptions="Fill" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                </chart:SfCartesianChart.Title>
                <chart:SfCartesianChart.XAxes>
                    <chart:CategoryAxis x:Name="XAxis" IsVisible="True" ShowMajorGridLines="False" Interval="2" EdgeLabelsDrawingMode="Shift">
                        <chart:CategoryAxis.AxisLineStyle>
                            <chart:ChartLineStyle/>
                        </chart:CategoryAxis.AxisLineStyle>
                    </chart:CategoryAxis>
                </chart:SfCartesianChart.XAxes>
                <chart:SfCartesianChart.YAxes >
                    <chart:NumericalAxis x:Name="YAxis" Minimum="0" Maximum="100" Interval="20" ShowMajorGridLines="True" ShowMinorGridLines="False">
                        <chart:NumericalAxis.LabelStyle>
                            <chart:ChartAxisLabelStyle LabelFormat="0'%"/>
                        </chart:NumericalAxis.LabelStyle>
                        <chart:NumericalAxis.AxisLineStyle>
                            <chart:ChartLineStyle StrokeWidth="0">
                            </chart:ChartLineStyle>
                        </chart:NumericalAxis.AxisLineStyle>
                    </chart:NumericalAxis>
                </chart:SfCartesianChart.YAxes>
                <chart:SfCartesianChart.Legend>
                    <chart:ChartLegend/>
                </chart:SfCartesianChart.Legend>
                <chart:StackingArea100Series XBindingPath="Year"
                                  YBindingPath="Peru"
                                  ItemsSource="{Binding EmissionData}"
                                  EnableAnimation="True"
                                  Label="Peru"
                                  LegendIcon="SeriesType"
                                  EnableTooltip="True"
                                  TooltipTemplate="{StaticResource template1}"/>
                <chart:StackingArea100Series  XBindingPath="Year"
                                   YBindingPath="Canada"
                                   ItemsSource="{Binding EmissionData}"
                                   EnableAnimation="True"
                                   Label="Canada"
                                   LegendIcon="SeriesType"
                                   EnableTooltip="True"
                                   TooltipTemplate="{StaticResource template2}"/>
                <chart:StackingArea100Series XBindingPath="Year"
                                  YBindingPath="Ethiopia"
                                  ItemsSource="{Binding EmissionData}"
                                  EnableAnimation="True"
                                  Label="Ethiopia"
                                  LegendIcon="SeriesType"
                                  EnableTooltip="True"
                                  TooltipTemplate="{StaticResource template3}"/>
                <chart:StackingArea100Series XBindingPath="Year"
                                  YBindingPath="Mali"
                                  ItemsSource="{Binding EmissionData}"
                                  EnableAnimation="True"
                                  Label="Mali"
                                  LegendIcon="SeriesType"
                                  EnableTooltip="True"
                                  TooltipTemplate="{StaticResource template4}"/>
            </chart:SfCartesianChart>
            <HorizontalStackLayout x:Name="hyperLinkLayout" Margin="5,5,0,0">
                <Label Text="Source: " FontSize="12" VerticalOptions="Center"></Label>
                <Label TextColor="#3E8EED" FontSize="12" FontAttributes="Italic" Text="The World Bank Group" VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="https://data.worldbank.org/indicator/EN.ATM.METH.ZG?end=2010&amp;locations=CA-PE-ET-ML&amp;start=2000&amp;view=chart"></TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>