<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.CartesianChart.SfCartesianChart.StackedAreaChart"
             xmlns:local="clr-namespace:SampleBrowser.Maui.CartesianChart.SfCartesianChart"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             xmlns:converter="clr-namespace:Syncfusion.Maui.Core.Converters;assembly=Syncfusion.Maui.Core"
             xmlns:chart="http://schemas.syncfusion.com/maui">
    <localCore:SampleView.Content>
        <chart:SfCartesianChart x:Name="Chart" PaletteBrushes="{Binding PaletteBrushes}" HorizontalOptions="Fill" VerticalOptions="FillAndExpand">
            <chart:SfCartesianChart.Resources>
                <ResourceDictionary>
                    <DataTemplate x:Key="template1">
                        <StackLayout>
                            <Label Text="Organic" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                            <BoxView Color="Gray" HeightRequest="1" WidthRequest="90"/>
                            <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#314A6E" Margin="0,1,3,0"/>
                                <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0"/>
                                <Label Text="{Binding Item.Organic,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                    <DataTemplate x:Key="template2">
                        <StackLayout>
                            <Label Text="FairTrade" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                            <BoxView Color="Gray" HeightRequest="1" WidthRequest="90"/>
                            <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#48988B" Margin="0,1,3,0"/>
                                <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0"/>
                                <Label Text="{Binding Item.FairTrade,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                    <DataTemplate x:Key="template3">
                        <StackLayout>
                            <Label Text="Veg Alternatives" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                            <BoxView Color="Gray" HeightRequest="1" WidthRequest="100"/>
                            <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#5E498C" Margin="0,1,3,0"/>
                                <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0"/>
                                <Label Text="{Binding Item.VegAlternatives,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                    <DataTemplate x:Key="template4">
                        <StackLayout>
                            <Label Text="Others" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontFamily="Helvetica" Margin="0,2,0,2" FontSize="12.5"/>
                            <BoxView Color="Gray" HeightRequest="1" WidthRequest="90"/>
                            <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="0" Padding="3" Margin="0" HorizontalOptions="Center">
                                <Ellipse Stroke="White" StrokeThickness="2" HeightRequest="10" WidthRequest="10" Fill="#74BD6F" Margin="0,1,3,0"/>
                                <Label Text="{Binding Item.Year}"  VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="White" FontFamily="Helvetica" FontSize="12" Margin="3,0,3,0"/>
                                <Label Text="{Binding Item.Others,StringFormat=' :  {0}'}" VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="White" FontFamily="Helvetica" Margin="0,0,3,0" FontSize="12"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </ResourceDictionary>
            </chart:SfCartesianChart.Resources>
            <chart:SfCartesianChart.BindingContext>
                <local:StackedAreaViewModel/>
            </chart:SfCartesianChart.BindingContext>
            <chart:SfCartesianChart.Title>
                <Label Text="The Sales Trend of Ethical Produce: A Comprehensive Analysis" Margin="0" HorizontalOptions="Fill" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
            </chart:SfCartesianChart.Title>
            <chart:SfCartesianChart.XAxes>
                <chart:CategoryAxis x:Name="XAxis" IsVisible="True" ShowMajorGridLines="False" Interval="2" EdgeLabelsDrawingMode="Shift" PlotOffsetEnd="5">
                </chart:CategoryAxis>
            </chart:SfCartesianChart.XAxes>
            <chart:SfCartesianChart.YAxes >
                <chart:NumericalAxis x:Name="YAxis" Minimum="0" Maximum="7" Interval="1" ShowMajorGridLines="True" ShowMinorGridLines="false">
                    <chart:NumericalAxis.LabelStyle>
                        <chart:ChartAxisLabelStyle LabelFormat="0'B"/>
                    </chart:NumericalAxis.LabelStyle>
                    <chart:NumericalAxis.AxisLineStyle>
                        <chart:ChartLineStyle StrokeWidth="0">
                        </chart:ChartLineStyle>
                    </chart:NumericalAxis.AxisLineStyle>
                </chart:NumericalAxis>
            </chart:SfCartesianChart.YAxes>
            <chart:SfCartesianChart.Legend>
                <chart:ChartLegend/>
            </chart:SfCartesianChart.Legend>
            <chart:StackingAreaSeries XBindingPath="Year"
                                      YBindingPath="Organic"
                                      ItemsSource="{Binding StackedAreaData}"
                                      EnableAnimation="True"
                                      Label="Organic"
                                      LegendIcon="SeriesType"
                                      EnableTooltip="True"
                                      TooltipTemplate="{StaticResource template1}"/>
            <chart:StackingAreaSeries XBindingPath="Year"
                                      YBindingPath="FairTrade"
                                      ItemsSource="{Binding StackedAreaData}"
                                      EnableAnimation="True"
                                      Label="Fairtrade"
                                      LegendIcon="SeriesType"
                                      EnableTooltip="True"
                                      TooltipTemplate="{StaticResource template2}"/>
            <chart:StackingAreaSeries XBindingPath="Year"
                                      YBindingPath="VegAlternatives"
                                      ItemsSource="{Binding StackedAreaData}"
                                      EnableAnimation="True"
                                      Label="Veg Alternatives"
                                      LegendIcon="SeriesType"
                                      EnableTooltip="True"
                                      TooltipTemplate="{StaticResource template3}"/>
            <chart:StackingAreaSeries XBindingPath="Year"
                                      YBindingPath="Others"
                                      ItemsSource="{Binding StackedAreaData}"
                                      EnableAnimation="True"
                                      Label="Others"
                                      LegendIcon="SeriesType"
                                      EnableTooltip="True"
                                      TooltipTemplate="{StaticResource template4}"/>
        </chart:SfCartesianChart>
    </localCore:SampleView.Content>
</localCore:SampleView>