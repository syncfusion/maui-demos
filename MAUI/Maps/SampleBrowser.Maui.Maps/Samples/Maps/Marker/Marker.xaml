<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.Maps.SfMaps.Marker"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:maps="clr-namespace:Syncfusion.Maui.Maps;assembly=Syncfusion.Maui.Maps"
                      xmlns:local="clr-namespace:SampleBrowser.Maui.Maps"
                      Background="White">

    <localCore:SampleView.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="markerTemplate">
                <StackLayout>
                    <Ellipse WidthRequest="8" HeightRequest="8"
                             Fill="Red"/>
                    <Label Text="{Binding Name}"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontSize="Caption"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Time}"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontSize="8"/>
                </StackLayout>

            </DataTemplate>
        </ResourceDictionary>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <Grid Margin="20">
            <Grid.BindingContext>
                <local:MarkerViewModel/>
            </Grid.BindingContext>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   HorizontalOptions="Center" 
                   Text="World Clock" 
                   FontSize="Subtitle" 
                   Margin="0,0,0,20"/>
            <maps:SfMaps Grid.Row="1">
                <maps:SfMaps.Layer>
                    <maps:MapShapeLayer x:Name="shapeLayer"
                                ShapeHoverFill="Transparent"
                                ShapeHoverStroke="Transparent"
                                ShapeHoverStrokeThickness="0"
                                ShapeFill="#dadadb"
                                ShapeStrokeThickness="0"
                                Markers="{Binding Markers}"
                                MarkerTemplate="{StaticResource markerTemplate}">
                    </maps:MapShapeLayer>
                </maps:SfMaps.Layer>
            </maps:SfMaps>
        </Grid>
    </localCore:SampleView.Content>
</localCore:SampleView>