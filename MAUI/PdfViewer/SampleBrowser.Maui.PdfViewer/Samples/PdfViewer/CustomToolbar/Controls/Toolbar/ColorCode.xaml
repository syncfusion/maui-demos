                                    <Button Grid.Row="1" Grid.Column="1" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="30" WidthRequest="30" CornerRadius="15" BackgroundColor="#FFDEA6" Clicked="ColorFillButton_Clicked"/>
                                    <Button Grid.Row="1" Grid.Column="2" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="30" WidthRequest="30" CornerRadius="15" BackgroundColor="#FBFBA6" Clicked="ColorFillButton_Clicked"/>
