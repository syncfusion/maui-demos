                                        <sliders:SliderTrackStyle ActiveFill="#6750A4" InactiveFill="#1F000000"/>
                                    </sliders:SfSlider.TrackStyle>
                                    <sliders:SfSlider.ThumbStyle>
                                        <sliders:SliderThumbStyle Fill="#6750A4"/>
                                    </sliders:SfSlider.ThumbStyle>
                                    <sliders:SfSlider.ThumbOverlayStyle>
                                        <sliders:SliderThumbOverlayStyle Fill="#DFD8F7" Radius="20"/>
                                    </sliders:SfSlider.ThumbOverlayStyle>
                                    <!--<sliders:SfSlider.Tooltip >
                                            <sliders:SliderTooltip Fill="#6750A4" Position="Auto" FontSize="10"  />
                                        </sliders:SfSlider.Tooltip>-->
                                </sliders:SfSlider>
                            </Grid>
                            <Line Grid.Row="4" StrokeThickness="1" BackgroundColor="#CAC4D0"/>
                            <Grid Grid.Row="5" Margin="0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="Stroke Thickness" TextColor="#1C1B1F" HorizontalOptions="Start" Margin="15,0,0,0"/>
                                <sliders:SfSlider x:Name="desktopThicknessSlider"  Grid.Row="1" Minimum="0" Maximum="12" Value="{Binding SelectedThickness}" ValueChangeEnd="thicknessSlider_valueChanged" HorizontalOptions="Start" >
