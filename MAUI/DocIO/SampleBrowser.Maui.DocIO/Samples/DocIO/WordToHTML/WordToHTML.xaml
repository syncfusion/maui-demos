<?xml version="1.0" encoding="UTF-8"?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      x:Class="SampleBrowser.Maui.DocIO.DocIO.WordToHTML">
	<localCore:SampleView.Content>
		<StackLayout Margin ="10">
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This example demonstrates how to convert a Word document to HTML file using .NET Word Library (DocIO)."
                  VerticalOptions="Center" Margin="0,0,5,0">
			</Label>
			<Label x:Name="label1" Text=" "></Label>
            <Label x:Name="viewButtonDescription" LineBreakMode="WordWrap" Text="Click the &quot;View Template&quot; button to view the input Word document. Please note that a Word-compatible viewer is required to open and view the Word document."
                  VerticalOptions="Center" Margin="0,0,5,0">
			</Label>
			<Label x:Name="label2" Text=" "></Label>
            <Label x:Name="generateButtonDescription" LineBreakMode="WordWrap" Text="Click the &quot;Convert To HTML&quot; button to view the converted HTML file."
                 VerticalOptions="Center" Margin="0,0,5,0">
			</Label>
			<Label x:Name="label3" Text=" "></Label>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
				<Button x:Name="btnViewTemplate" Clicked ="ButtonView_Click" Text ="View Template " HorizontalOptions="Start"/>
                <Button x:Name="btnGenerateDocument" Clicked ="Button_Click" Text ="Convert To HTML" HorizontalOptions="Start"/>
			</StackLayout>
		</StackLayout>
	</localCore:SampleView.Content>
</localCore:SampleView>