<?xml version="1.0" encoding="utf-8" ?>
<sb:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:sb="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
               xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
               x:Class="SampleBrowser.Maui.Sliders.SfRangeSlider.RangeSliderDragModeSample">

    <sb:SampleView.Content>
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,25,Auto,Auto,25,Auto,Auto"
                  ColumnDefinitions="24,Auto,24"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">

                <Label Grid.Row="0"
                       Grid.Column="1"
                       Text="On thumb" />
                <sliders:SfRangeSlider Grid.Row="1"
                                       Grid.ColumnSpan="3"
                                       Minimum="0"
                                       Maximum="100"
                                       RangeStart="25"
                                       RangeEnd="75"
                                       Interval="25"
                                       ShowTicks="True"
                                       ShowLabels="True" />

                <Label Grid.Row="3"
                       Grid.Column="1"
                       Text="Between thumbs" />
                <sliders:SfRangeSlider Grid.Row="4"
                                       Grid.ColumnSpan="3"
                                       Minimum="0"
                                       Maximum="100"
                                       RangeStart="25"
                                       RangeEnd="75"
                                       Interval="25"
                                       ShowTicks="True"
                                       ShowLabels="True"
                                       DragBehavior="BetweenThumbs" />

                <Label Grid.Row="6"
                       Grid.Column="1"
                       Text="Both" />
                <sliders:SfRangeSlider Grid.Row="7"
                                       Grid.ColumnSpan="3"
                                       Minimum="0"
                                       Maximum="100"
                                       RangeStart="25"
                                       RangeEnd="75"
                                       Interval="25"
                                       ShowTicks="True"
                                       ShowLabels="True"
                                       DragBehavior="Both" />
            </Grid>
        </ScrollView>
    </sb:SampleView.Content>
</sb:SampleView>