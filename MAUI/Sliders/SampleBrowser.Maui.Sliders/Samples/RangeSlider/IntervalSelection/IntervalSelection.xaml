<?xml version="1.0" encoding="utf-8" ?>
<sb:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:sb="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
               xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
               x:Class="SampleBrowser.Maui.Sliders.SfRangeSlider.RangeSliderIntervalSelectionSample">

    <sb:SampleView.Content>
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,25,Auto,Auto"
                  ColumnDefinitions="24,Auto,24"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">
                
                <Label Grid.Row="0"
                       Grid.Column="1"
                       Text="Numeric" />
                <sliders:SfRangeSlider Grid.Row="1"
                                       Grid.ColumnSpan="3"
                                       Minimum="0"
                                       Maximum="100"
                                       RangeStart="25"
                                       RangeEnd="75"
                                       Interval="25"
                                       StepSize="25"
                                       ShowTicks="True"
                                       ShowLabels="True"
                                       EnableIntervalSelection="True" />

                <Label Grid.Row="3"
                       Grid.Column="1"
                       Text="Date" />
                <sliders:SfDateTimeRangeSlider Grid.Row="4"
                                               Grid.ColumnSpan="3"
                                               Minimum="2010-01-01"
                                               Maximum="2018-01-01"
                                               RangeStart="2012-01-01"
                                               RangeEnd="2016-01-01"
                                               StepDuration="2"
                                               IntervalType="Years"
                                               Interval="2"
                                               ShowTicks="True"
                                               ShowLabels="True"
                                               EnableIntervalSelection="True" />
            </Grid>
        </ScrollView>
    </sb:SampleView.Content>
</sb:SampleView>