<?xml version="1.0" encoding="utf-8" ?>
<sb:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:sb="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
               xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
               x:Class="SampleBrowser.Maui.Sliders.VerticalRangeSlider.VerticalRangeSliderStepSample">

    <sb:SampleView.Resources>
        <Style TargetType="sliders:SfRangeSlider">
            <Setter Property="Orientation"
                    Value="Vertical" />
            <Setter Property="Tooltip">
                <Setter.Value>
                    <sliders:SliderTooltip Position="Right" />
                </Setter.Value>
            </Setter>
            <Setter Property="ShowLabels"
                    Value="True" />
            <Setter Property="ShowTicks"
                    Value="True" />
            <Setter Property="MaximumHeightRequest"
                    Value="300" />
        </Style>

        <Style TargetType="sliders:SfDateTimeRangeSlider">
            <Setter Property="Orientation"
                    Value="Vertical" />
            <Setter Property="Tooltip">
                <Setter.Value>
                    <sliders:SliderTooltip  Position="Right" />
                </Setter.Value>
            </Setter>
            <Setter Property="ShowLabels"
                    Value="True" />
            <Setter Property="ShowTicks"
                    Value="True" />
            <Setter Property="MaximumHeightRequest"
                    Value="300" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor"
                    Value="Black" />
            <Setter Property="HorizontalOptions"
                    Value="Center" />
        </Style>
    </sb:SampleView.Resources>

    <sb:SampleView.Content>
        <ScrollView>
            <Grid RowDefinitions="300,Auto"
                  ColumnDefinitions="*,*"
                  WidthRequest="350"
                  VerticalOptions="Center">

                <sliders:SfRangeSlider Grid.Row="0"
                                       Grid.Column="0"
                                       Minimum="-50"
                                       Maximum="50"
                                       RangeStart="-25"
                                       RangeEnd="25"
                                       Interval="25"
                                       StepSize="25" />
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="Numeric"
                       Margin="-30,0,0,0" />

                <sliders:SfDateTimeRangeSlider Grid.Row="0"
                                               Grid.Column="1"
                                               Minimum="2000-01-01"
                                               Maximum="2020-01-01"
                                               RangeStart="2005-01-01"
                                               RangeEnd="2015-01-01"
                                               StepDuration="5"
                                               IntervalType="Years"
                                               Interval="5" />
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="Date"
                       Margin="-10,0,0,0" />
            </Grid>
        </ScrollView>
    </sb:SampleView.Content>
</sb:SampleView>
