<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.XlsIO.XlsIO.AutoFill"            
			 xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             >

    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="Description" LineBreakMode="WordWrap" Text="This sample demonstrates how to use the Auto Fill and Fill Series options with XlsIO."
     VerticalOptions="Center">
            </Label>
            <Label Text=" "/>
            <Label x:Name="SampleDescription" LineBreakMode="WordWrap" Text="Click the 'Create Document' button to generate and view the Excel file. You can enter the Step Value and Stop Value as either a number or a date in MM/DD/YYYY format, and the generated document can be opened using Microsoft Excel or Excel Viewer."
                 VerticalOptions="Center">
            </Label>
            <Label Text=" "/>

            <HorizontalStackLayout Margin="0,0,0,0">
                <Label x:Name="fillType" VerticalOptions="Center" Text="Fill Type:" FontAttributes="Bold" Padding="0,0,10,0" ></Label>
                <RadioButton x:Name="autoFill" WidthRequest="{OnPlatform WinUI=10, Android=100, iOS=100, MacCatalyst=100}"  VerticalOptions="Start" GroupName="layoutOption" Content="Auto Fill" Margin="{OnPlatform WinUI='19,0,0,0', MacCatalyst='11,0,0,0', iOS='11,0,0,0', Android='10,0,0,0'}" CheckedChanged="FillTypeChanged"></RadioButton>
                <RadioButton x:Name="fillSeries" WidthRequest="{OnPlatform WinUI=10, Android=100, iOS=150, MacCatalyst=170}" VerticalOptions="Start" GroupName="layoutOption" Content="Fill Series" Padding="{OnPlatform WinUI='10,0,0,0', MacCatalyst='1,0,0,0', iOS='5,0,0,0', Android='10,0,0,0'}"  CheckedChanged="FillTypeChanged"></RadioButton>
            </HorizontalStackLayout>


            <HorizontalStackLayout Margin="0,-7,0,0" >
                <Label x:Name="Content_1" LineBreakMode="WordWrap" Text="Fill Option:"
                    VerticalOptions="Center" FontAttributes="Bold">
                </Label>

                <syncfusion:SfTextInputLayout x:Name="Column1" VerticalOptions="Center" ContainerType="Outlined" OutlineCornerRadius="4" InputViewPadding="{OnPlatform WinUI='5,0,5,0', MacCatalyst='5,0,5,0', iOS='5,0,5,0', Android='5,0,5,0'}" Margin="{OnPlatform WinUI='16,15,0,0', MacCatalyst='16,15,0,0', iOS='16,15,0,0', Android='16,15,0,0'}" HorizontalOptions="Start" HeightRequest="{OnPlatform WinUI=50, Android=53, iOS=53, MacCatalyst=50}" ContainerBackground="white" WidthRequest="{OnPlatform WinUI=230, Android=215, iOS=200, MacCatalyst=200}">
                    <editors:SfComboBox x:Name="fillDropDown" SelectedIndex="0" Padding="{OnPlatform WinUI='0,-19,0,0', MacCatalyst='0,-19,0,0', iOS='0,-14,0,0', Android='0,-6,0,0'}"  VerticalOptions="Start" IsClearButtonVisible="false" IsEditable="False" SelectionChanged="FillOptionChanged">
                        <editors:SfComboBox.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Fill Option</x:String>
                                <x:String>Default</x:String>
                                <x:String>Copy</x:String>
                                <x:String>Series</x:String>
                                <x:String>Formats</x:String>
                                <x:String>Values</x:String>
                                <x:String>Days</x:String>
                                <x:String>WeekDays</x:String>
                                <x:String>Months</x:String>
                                <x:String>Years</x:String>
                                <x:String>Linear Trend</x:String>
                                <x:String>Growth Trend</x:String>
                                <x:String>FillSeries - Linear</x:String>
                                <x:String>FillSeries - Growth</x:String>
                                <x:String>FillSeries - Days</x:String>
                                <x:String>FillSeries - WeekDays</x:String>
                                <x:String>FillSeries - Months</x:String>
                                <x:String>FillSeries - Years</x:String>
                                <x:String>FillSeries - AutoFill</x:String>
                            </x:Array>
                        </editors:SfComboBox.ItemsSource>
                    </editors:SfComboBox>
                </syncfusion:SfTextInputLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="{OnPlatform WinUI='0,-15,0,0', iOS='0,-18,0,0', MacCatalyst='0,-16,0,0',Android='0,-15,0,0'}">
                <Label x:Name="Content_2" LineBreakMode="WordWrap" Text="Series In:"
                VerticalOptions="Center" FontAttributes="Bold">
                </Label>
                <syncfusion:SfTextInputLayout x:Name="Column2" ContainerType="Outlined" OutlineCornerRadius="4" InputViewPadding="5,0,5,0" Margin="{OnPlatform WinUI='28,15,0,0', iOS='25,15,0,0',MacCatalyst='24,15,0,0',Android='25,15,0,0'}" VerticalOptions="Center" HorizontalOptions="Start" ContainerBackground="white" HeightRequest="{OnPlatform WinUI=50, Android=53, iOS=53, MacCatalyst=50}" WidthRequest="{OnPlatform WinUI=230, Android=215, iOS=200, MacCatalyst=200}">
                    <editors:SfComboBox x:Name="SeriesbyCombobox" SelectedIndex="0" VerticalOptions="Start" Padding="{OnPlatform WinUI='0,-18,0,0', MacCatalyst='0,-18,0,0', iOS='0,-14,0,0', Android='0,-7,0,0'}" Margin="0,0,0,0"  IsClearButtonVisible="false" IsEditable="False" IsEnabled="{Binding IsAutoFillType}">
                        <editors:SfComboBox.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Rows</x:String>
                                <x:String>Columns</x:String>
                            </x:Array>
                        </editors:SfComboBox.ItemsSource>
                    </editors:SfComboBox>
                </syncfusion:SfTextInputLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="{OnPlatform WinUI='0,-6,0,0', MacCatalyst='-3,0,0,0', iOS='-4,0,0,0', Android='-8,-6,0,0'}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" x:Name="chkboxTrend" VerticalOptions="Start" Margin="84,0,0,0" IsEnabled="{Binding IsAutoFillType}" CheckedChanged="OnTrendCheckBoxChanged"></CheckBox>
                    <Label Grid.Column="1" x:Name="lableTrend" VerticalOptions="Start" FontAttributes="Bold" Margin="{OnPlatform WinUI='-86,8,0,0', MacCatalyst='5,2,0,0',iOS='7,2,0,0',Android='1,7,0,0'}" Text="Trend"></Label>
                </Grid>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="{OnPlatform WinUI='0,15,0,0', MacCatalyst='0,13,0,0', iOS='0,11,0,0', Android='0,0,0,0'}">
                <Label x:Name="stepValue" FontAttributes="Bold" VerticalOptions="Center" Text="Step Value:" />
                <Editor x:Name="txtboxstepValue" Placeholder="Enter Value" IsReadOnly="False" VerticalOptions="Center" Margin="{OnPlatform WinUI='16,0,0,0', Android='10,0,0,0', MacCatalyst='10,0,0,0', iOS='10,0,0,0'}" WidthRequest="{OnPlatform WinUI=230, Android=215, iOS=200, MacCatalyst=200}" IsEnabled="{Binding IsAutoFillType}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="{OnPlatform WinUI='0,20,0,0', MacCatalyst='0,12,0,0', iOS='0,8,0,0', Android='0,3,0,0'}">
                <Label x:Name="stopValue" FontAttributes="Bold" VerticalOptions="Center" Text="Stop Value:" />
                <Editor x:Name="txtboxstopValue" Placeholder="Enter Value"  IsReadOnly="False" VerticalOptions="Center" Margin="{OnPlatform WinUI='16,0,0,0',MacCatalyst='10,0,0,0',iOS='10,0,0,0',Android='10,0,0,0'}" WidthRequest="{OnPlatform WinUI=230, Android=215, iOS=200, MacCatalyst=200}" IsEnabled="{Binding IsAutoFillType}"/>
            </HorizontalStackLayout>

            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10" Margin="{OnPlatform WinUI='0,20,0,0', Android='-220,20,0,0', iOS='-645,20,0,0', MacCatalyst='0,16,0,0'}" >
                <Button x:Name="btnGenerate" Clicked ="btnGenerate_Click" WidthRequest="153" Text ="Create Document" HorizontalOptions="Center" VerticalOptions="Center"></Button>
            </StackLayout>
        </StackLayout>
    </localCore:SampleView.Content>

</localCore:SampleView>
    
