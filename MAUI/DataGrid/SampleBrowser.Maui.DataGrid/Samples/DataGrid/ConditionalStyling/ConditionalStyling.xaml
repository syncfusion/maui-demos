<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.DataGrid.SfDataGrid.ConditionalStyling"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
             xmlns:local="clr-namespace:SampleBrowser.Maui.DataGrid"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             xmlns:sfgrid="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid">
    <localCore:SampleView.BindingContext>
        <local:SalesViewModel>
        </local:SalesViewModel>
    </localCore:SampleView.BindingContext>
    <localCore:SampleView.Resources>
        <ResourceDictionary>
            <local:ConditionalStylingConverter x:Key="customstyle"/>
        </ResourceDictionary>
        <OnPlatform x:Key="maximumWidth"
            x:TypeArguments="x:Double">
            <On Platform="Android,iOS">
                <OnIdiom x:TypeArguments="x:Double"
                 Phone="150"
                 Tablet="300"/>
            </On>
            <On Platform="WinUI,MacCatalyst" Value="300"></On>
        </OnPlatform>
        <OnPlatform x:Key="margin" x:TypeArguments="Thickness">
            <On Platform="WinUI,MacCatalyst" Value="-5"/>
        </OnPlatform>
        <Style TargetType="sfgrid:DataGridHeaderCell">
            <Setter Property="FontFamily"
                    Value="Roboto-Medium" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>
        <Style TargetType="sfgrid:DataGridCell">
            <Setter Property="FontSize"
                    Value="14" />
        </Style>
    </localCore:SampleView.Resources>
    <localCore:SampleView.Content>

        <sfgrid:SfDataGrid x:Name="dataGrid"
                           Margin="{StaticResource margin}"
                           AutoGenerateColumnsMode="None"
                           HeaderRowHeight="52"
                           RowHeight="48"
                           HorizontalScrollBarVisibility="Always"
                           VerticalScrollBarVisibility="Always"
                           x:DataType="local:SalesViewModel"
                           ItemsSource="{Binding DailySalesDetails}"
                           ColumnWidthMode="Fill">
            <sfgrid:SfDataGrid.Columns>
                <sfgrid:DataGridTextColumn   MappingName="Name"
                                             HeaderText="Name">

                </sfgrid:DataGridTextColumn>
                <sfgrid:DataGridTextColumn Format="C"
                                           HeaderText="QS1"
                                           CellTextAlignment="Center"
                                           HeaderTextAlignment="Center"
                                           MappingName="QS1"
                                           MaximumWidth="{StaticResource maximumWidth}">
                    <sfgrid:DataGridTextColumn.CellStyle>
                        <Style TargetType="sfgrid:DataGridCell">
                            <Setter Property="Background" x:DataType="Color">
                                <Setter.Value>
                                    <Binding Path="QS1" x:DataType="local:SalesInfo" Converter="{StaticResource customstyle}" ConverterParameter="QS1" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </sfgrid:DataGridTextColumn.CellStyle>

                </sfgrid:DataGridTextColumn>
                <sfgrid:DataGridTextColumn Format="C"
                                           HeaderText="QS2"
                                           CellTextAlignment="Center"
                                           HeaderTextAlignment="Center"
                                           MappingName="QS2"
                                           MaximumWidth="{StaticResource maximumWidth}">
                    <sfgrid:DataGridTextColumn.CellStyle>
                        <Style TargetType="sfgrid:DataGridCell">
                            <Setter Property="Background" x:DataType="Color">
                                <Setter.Value>
                                    <Binding Path="QS2" x:DataType="local:SalesInfo" Converter="{StaticResource customstyle}" ConverterParameter="QS2" />
                                </Setter.Value>
                            </Setter>                       
                        </Style>
                    </sfgrid:DataGridTextColumn.CellStyle>
                </sfgrid:DataGridTextColumn>

                <sfgrid:DataGridTextColumn Format="C"
                                           HeaderText="QS3"
                                           CellTextAlignment="Center"
                                           HeaderTextAlignment="Center"
                                           MappingName="QS3"
                                           MaximumWidth="{StaticResource maximumWidth}">
                    <sfgrid:DataGridTextColumn.CellStyle>
                        
                        <Style TargetType="sfgrid:DataGridCell">
                            <Setter Property="Background" x:DataType="Color">
                                <Setter.Value>
                                    <Binding Path="QS3" x:DataType="local:SalesInfo" Converter="{StaticResource customstyle}" ConverterParameter="QS3" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </sfgrid:DataGridTextColumn.CellStyle>
                </sfgrid:DataGridTextColumn>

                <sfgrid:DataGridTextColumn Format="C"
                                           MappingName="QS4"
                                           CellTextAlignment="Center"
                                           HeaderTextAlignment="Center"
                                           HeaderText="QS4"
                                           MaximumWidth="{StaticResource maximumWidth}">
                    <sfgrid:DataGridTextColumn.CellStyle>
                        <Style TargetType="sfgrid:DataGridCell">
                            <Setter Property="Background" x:DataType="Color">
                                <Setter.Value>
                                    <Binding Path="QS4" x:DataType="local:SalesInfo" Converter="{StaticResource customstyle}" ConverterParameter="QS4" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </sfgrid:DataGridTextColumn.CellStyle>
                </sfgrid:DataGridTextColumn>

            </sfgrid:SfDataGrid.Columns>

        </sfgrid:SfDataGrid>

    </localCore:SampleView.Content>

</localCore:SampleView>
