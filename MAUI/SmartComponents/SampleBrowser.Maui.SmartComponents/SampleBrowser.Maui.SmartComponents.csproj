<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net9.0-android;net9.0-ios;net9.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net9.0-windows10.0.19041.0</TargetFrameworks>
		<OutputType>Exe</OutputType>
		<RootNamespace>SampleBrowser.Maui.SmartComponents</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<EnableNETAnalyzers>true</EnableNETAnalyzers>
		<EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
		<AnalysisLevel>latest</AnalysisLevel>
		<AnalysisLevelSecurity>latest-recommended</AnalysisLevelSecurity>
		<CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
		<Nullable>enable</Nullable>
		<NoWarn>$(NoWarn);NU1803;NU1903;XC0022;XC0103</NoWarn>
    <MauiEnableXamlCBindingWithSourceCompilation>true</MauiEnableXamlCBindingWithSourceCompilation>
    
		<!-- Display name -->
		<ApplicationTitle>SampleBrowser.Maui.SmartComponents</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.syncfusion.samplebrowser.maui.SmartComponents</ApplicationId>
		<ApplicationIdGuid>98983B4D-24C6-44A2-9D3F-15EFE7ABD3D0</ApplicationIdGuid>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">14.2</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.18362.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.18362.0</TargetPlatformMinVersion>
		<Configurations>Debug;Release;Release-Xml</Configurations>
	</PropertyGroup>
	
	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
		<DefineConstants>TRACE;DEBUG;</DefineConstants>
		 <TreatWarningsAsErrors>true</TreatWarningsAsErrors> 
		<WarningLevel>5</WarningLevel>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
		<DefineConstants>TRACE;RELEASE;</DefineConstants>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<WarningLevel>5</WarningLevel>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release-Xml|AnyCPU' ">
		<DefineConstants>TRACE;RELEASE;</DefineConstants>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<WarningLevel>5</WarningLevel>
	</PropertyGroup>
	
	<ItemGroup>
        <PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
	</ItemGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#4822E3" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#4822E3" BaseSize="*,*" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>


	<ItemGroup>
	  <None Remove="ControlList.xml" />
	  <None Remove="Samples\SmartComponents\SmartFillForm\PDF\smart-form.pdf" />
	  <None Remove="SmartComponentsSamplesList.xml" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="ControlList.xml" />
	  <EmbeddedResource Include="Samples\SmartComponents\SmartFillForm\PDF\smart-form.pdf" />
	  <EmbeddedResource Include="SmartComponentsSamplesList.xml" />
	  <EmbeddedResource Include="SyncfusionLicense.txt" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SemanticKernel" Version="1.0.1" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
		<PackageReference Include="Syncfusion.Maui.Core" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.DataForm" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Data" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Inputs" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Charts" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Picker" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Maps" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.PdfViewer" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.DataGrid" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.PullToRefresh" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.TabView" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Buttons" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Popup" version="28.2.3" />
		<PackageReference Include="SampleBrowser.Maui.Base" version="28.2.3" />
		<PackageReference Include="Syncfusion.PDF.NET" version="28.2.3" />
		<PackageReference Include="Syncfusion.Compression.NET" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.SignaturePad" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.DataSource" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.GridCommon" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.ListView" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.PdfToImageConverter" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Sliders" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Scheduler" version="28.2.3" />
      	<PackageReference Include="Syncfusion.Pdf.Imaging.NET" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.AIAssistView" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Calendar" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Carousel" version="28.2.3" />
		<PackageReference Include="Syncfusion.Maui.Chat" version="28.2.3" />
	</ItemGroup>
</Project>
