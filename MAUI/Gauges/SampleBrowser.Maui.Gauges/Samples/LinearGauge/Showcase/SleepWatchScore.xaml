<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.Gauges.SfLinearGauge.SleepWatchScore"
                      xmlns:local="clr-namespace:SampleBrowser.Maui.Gauges.SfLinearGauge"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges"
                      Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                      Margin="0,40,0,40">

    <localCore:SampleView.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}" />
        </Style>
        <local:GraphicsDrawable x:Key="GraphicsDrawable" />
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>

        <Grid HorizontalOptions="Center"
              VerticalOptions="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="15,0,0,0" />
                </OnPlatform>
            </Grid.Margin>

            <VerticalStackLayout HorizontalOptions="Start">
                <Label Text="TODAY"
                               TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}"
                               FontSize="12" />
                <Label Text="280"
                               TextColor="#FFBF00"
                               FontAttributes="Bold"
                               FontSize="Large" />
            </VerticalStackLayout>
            <local:SleepWatchScoreGauge  x:Name="sleepWatchScoreGauge1"
                                         WidthRequest="{OnPlatform Android=270}"
                                         Grid.Column="1"
                                         Minimum="100"
                                         Maximum="500"
                                         LabelOffset="10"
                                         HorizontalOptions="Center"
                                         LabelPosition="Outside"
                                         EnableAxisAnimation="True"
                                         EnableRangeAnimation="True"
                                         ShowTicks="False">
                <gauge:SfLinearGauge.LineStyle>
                    <gauge:LinearLineStyle Thickness="15" Fill="{AppThemeBinding Default={StaticResource ContentBackgroundAlt2}}"/>
                </gauge:SfLinearGauge.LineStyle>
                <gauge:SfLinearGauge.Ranges>
                    <gauge:LinearRange Fill="#0DC9AB" 
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="500"
                                               StartWidth="8"
                                               EndWidth="8" />
                    <gauge:LinearRange Fill="#FB7D55"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="400"
                                               StartWidth="8"
                                               EndWidth="8" />
                    <gauge:LinearRange Fill="#FFBF00"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="300"
                                               StartWidth="8"
                                               EndWidth="8" />
                    <gauge:LinearRange Fill="Red"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="200"
                                               StartWidth="8"
                                               EndWidth="8" />
                </gauge:SfLinearGauge.Ranges>
                <gauge:SfLinearGauge.MarkerPointers>
                    <gauge:LinearShapePointer Value="280"
                                                      EnableAnimation="True"
                                                      AnimationEasing="{x:Static Easing.CubicOut}"
                                                      Position="Cross"
                                                      HasShadow="True"
                                                      ShapeType="Circle"
                                                      Fill="#FFBF00"
                                                      ShapeWidth="20"
                                                      ShapeHeight="20" />
                </gauge:SfLinearGauge.MarkerPointers>
            </local:SleepWatchScoreGauge>

            <VerticalStackLayout Grid.Row="1"
                                         HorizontalOptions="Start">
                <Label Text="OVERALL"
                               TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}"
                               FontSize="12" />
                <Label Text="410"
                               TextColor="#0DC9AB"
                               FontAttributes="Bold"
                               FontSize="Large" />
            </VerticalStackLayout>
            <local:SleepWatchScoreGauge x:Name="sleepWatchScoreGauge2"
                                        WidthRequest="{OnPlatform Android=270}"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Minimum="100"
                                        Maximum="500"
                                        LabelOffset="10"
                                        HorizontalOptions="Center"
                                        LabelPosition="Outside"
                                        ShowTicks="False"
                                        EnableAxisAnimation="True"
                                        EnableRangeAnimation="True">
                <gauge:SfLinearGauge.LineStyle>
                    <gauge:LinearLineStyle Thickness="15" Fill="{AppThemeBinding Default={StaticResource ContentBackgroundAlt2}}"/>
                </gauge:SfLinearGauge.LineStyle>
                <gauge:SfLinearGauge.Ranges>
                    <gauge:LinearRange Fill="#0DC9AB"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="500"
                                               StartWidth="8"
                                               EndWidth="8" />
                    <gauge:LinearRange Fill="#FB7D55"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="400"
                                               StartWidth="8"
                                               EndWidth="8" />
                    <gauge:LinearRange Fill="#FFBF00"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="300"
                                               StartWidth="8"
                                               EndWidth="8" />
                    <gauge:LinearRange Fill="Red"
                                               StartValue="100"
                                               Position="Cross"
                                               EndValue="200"
                                               StartWidth="8"
                                               EndWidth="8" />
                </gauge:SfLinearGauge.Ranges>
                <gauge:SfLinearGauge.MarkerPointers>
                    <gauge:LinearShapePointer Value="410"
                                                      EnableAnimation="True"
                                                      AnimationEasing="{x:Static Easing.CubicOut}"
                                                      Position="Cross"
                                                      HasShadow="True"
                                                      ShapeType="Circle"
                                                      Fill="#0DC9AB"
                                                      ShapeWidth="20"
                                                      ShapeHeight="20" />
                </gauge:SfLinearGauge.MarkerPointers>

            </local:SleepWatchScoreGauge>

        </Grid>


    </localCore:SampleView.Content>
</localCore:SampleView>