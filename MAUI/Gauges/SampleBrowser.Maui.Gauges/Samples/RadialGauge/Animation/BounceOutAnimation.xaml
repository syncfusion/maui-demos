<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.Gauges.SfRadialGauge.BounceOutAnimation"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:gauge="http://schemas.syncfusion.com/maui">
    
    <localCore:SampleView.Content>
        <gauge:SfRadialGauge x:Name="bounceOutAnimationGauge" HorizontalOptions="Center">
            <gauge:SfRadialGauge.Axes>
                <gauge:RadialAxis RadiusFactor="0.85"
                                  Interval="2"
                                  MinorTicksPerInterval="9"
                                  StartAngle="90"
                                  EndAngle="330"
                                  Minimum="-8"
                                  Maximum="12"
                                  OffsetUnit="Factor"
                                  ShowAxisLine="False">
                    <gauge:RadialAxis.MajorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                               Length="0.15"
                                               StrokeThickness="2" />
                    </gauge:RadialAxis.MajorTickStyle>
                    <gauge:RadialAxis.MinorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                               Length="0.08"
                                               StrokeThickness="1" />
                    </gauge:RadialAxis.MinorTickStyle>
                    <gauge:RadialAxis.AxisLabelStyle>
                        <gauge:GaugeLabelStyle FontSize="11" />
                    </gauge:RadialAxis.AxisLabelStyle>
                    <gauge:RadialAxis.Pointers>
                        <gauge:NeedlePointer AnimationEasing="{x:Static Easing.BounceOut}"
                                             Value="0"
                                             NeedleStartWidth="2"
                                             NeedleEndWidth="2"
                                             NeedleFill="#FFF67280"
                                             NeedleLength="0.8"
                                             NeedleLengthUnit="Factor"
                                             EnableAnimation="True"
                                             AnimationDuration="1500"
                                             KnobRadius="8"
                                             KnobSizeUnit="Pixel"
                                             KnobFill="#FFF67280">
                        </gauge:NeedlePointer>
                    </gauge:RadialAxis.Pointers>
                </gauge:RadialAxis>
            </gauge:SfRadialGauge.Axes>

        </gauge:SfRadialGauge>
    </localCore:SampleView.Content>
</localCore:SampleView>