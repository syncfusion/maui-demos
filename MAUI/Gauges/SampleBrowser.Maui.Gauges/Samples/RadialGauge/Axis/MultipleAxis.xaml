<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.Gauges.SfRadialGauge.MultipleAxis"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges">
    <localCore:SampleView.Content>
        <gauge:SfRadialGauge x:Name="multipleAxisGauge" HorizontalOptions="Center" MinimumHeightRequest="350" MinimumWidthRequest="350">
            <gauge:SfRadialGauge.Axes>
                <gauge:RadialAxis Minimum="32"
                                                  Maximum="212"
                                                  Interval="36"
                                                  RadiusFactor="0.55"
                                                  CanRotateLabels="True">
                    <gauge:RadialAxis.AxisLineStyle>
                        <gauge:RadialLineStyle ThicknessUnit="Pixel"
                                                             Thickness="3"
                                                             Fill="#FF00A8B5" />
                    </gauge:RadialAxis.AxisLineStyle>
                    <gauge:RadialAxis.AxisLabelStyle>
                        <gauge:GaugeLabelStyle TextColor="#FF00A8B5" />
                    </gauge:RadialAxis.AxisLabelStyle>
                    <gauge:RadialAxis.MajorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.15"
                                                             Stroke="#FF00A8B5"
                                                             StrokeThickness="1.5" />
                    </gauge:RadialAxis.MajorTickStyle>
                    <gauge:RadialAxis.MinorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.07"
                                                             Stroke="#FF00A8B5"
                                                             StrokeThickness="1.5" />
                    </gauge:RadialAxis.MinorTickStyle>
                </gauge:RadialAxis>

                <gauge:RadialAxis LabelPosition="Outside"
                                                  TickPosition="Outside"
                                                  RadiusFactor="0.55"
                                                  Minimum="0"
                                                  Maximum="100"
                                                  Interval="10"
                                                  ShowAxisLine="False"
                                                  MinorTicksPerInterval="5">
                    <gauge:RadialAxis.MajorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.15"
                                                             Stroke="#999999"
                                                             StrokeThickness="1.5" />
                    </gauge:RadialAxis.MajorTickStyle>
                    <gauge:RadialAxis.MinorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.07"
                                                             Stroke="#C4C4C4"
                                                             StrokeThickness="1.5" />
                    </gauge:RadialAxis.MinorTickStyle>

                    <gauge:RadialAxis.Annotations>
                        <gauge:GaugeAnnotation PositionFactor="0.8"
                                                               DirectionValue="90">
                            <gauge:GaugeAnnotation.Content>
                                <HorizontalStackLayout>
                                    <Label Text="33 C  :"
                                                           TextColor="Black"
                                                           FontAttributes="Bold" />
                                    <Label Text=" 91.4 F"
                                                           TextColor="#FF00A8B5"
                                                           FontAttributes="Bold" />
                                </HorizontalStackLayout>
                            </gauge:GaugeAnnotation.Content>
                        </gauge:GaugeAnnotation>
                    </gauge:RadialAxis.Annotations>

                    <gauge:RadialAxis.Pointers>
                        <gauge:NeedlePointer NeedleLengthUnit="Factor"
                                                             NeedleLength="0.8"
                                                             NeedleStartWidth="1"
                                                             NeedleEndWidth="10"
                                                             Value="33"
                                                             EnableAnimation="True"
                                                             KnobRadius="12"
                                                             KnobSizeUnit="Pixel">
                        </gauge:NeedlePointer>
                    </gauge:RadialAxis.Pointers>
                </gauge:RadialAxis>
            </gauge:SfRadialGauge.Axes>
        </gauge:SfRadialGauge>
    </localCore:SampleView.Content>
</localCore:SampleView>
