<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.Gauges.SfRadialGauge.RangeLabel"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges">
    <localCore:SampleView.Content>
        <gauge:SfRadialGauge x:Name="rangeLabelGauge" HorizontalOptions="Center">
            <gauge:SfRadialGauge.Axes>
                <gauge:RadialAxis ShowLabels="False"
                                                  ShowAxisLine="False"
                                                  ShowTicks="False"
                                                  Minimum="0"
                                                  Maximum="100"
                                                  StartAngle="180"
                                                  EndAngle="360">

                    <gauge:RadialAxis.Ranges>
                        <gauge:RadialRange StartValue="0"
                                                          EndValue="33"
                                                          Label="SLOW"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.35"
                                                          EndWidth="0.35"
                                                          Fill="#FFFE2A25" />
                        <gauge:RadialRange StartValue="33"
                                                          EndValue="66"
                                                          Label="MODERATE"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.35"
                                                          EndWidth="0.35"
                                                          Fill="#FFFFBA00" />
                        <gauge:RadialRange StartValue="66"
                                                          EndValue="100"
                                                          Label="FAST"
                                                          WidthUnit="Factor"
                                                          StartWidth="0.35"
                                                          EndWidth="0.35"
                                                          Fill="#FF00AB47" />
                    </gauge:RadialAxis.Ranges>

                    <gauge:RadialAxis.Pointers>
                        <gauge:NeedlePointer Value="75"
                                                             NeedleLength="0.8"
                                                             NeedleStartWidth="2"
                                                             NeedleEndWidth="39"
                                                             KnobRadius="24"
                                                             KnobStrokeThickness="6"
                                                             KnobFill="White"
                                                             EnableAnimation="True"
                                                             KnobSizeUnit="Pixel" />
                    </gauge:RadialAxis.Pointers>
                </gauge:RadialAxis>
            </gauge:SfRadialGauge.Axes>
        </gauge:SfRadialGauge>
    </localCore:SampleView.Content>
</localCore:SampleView>
