<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.Presentation.Presentation.PPTXToPDF"
                      xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base">
    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This example demonstrates how to convert a PowerPoint presentation file to a PDF file."
                  VerticalOptions="Center" TextColor="Black" Margin="0,0,10,0">
            </Label>
            <Label x:Name="label1" Text=" "></Label>
            <Label x:Name="viewButtonDescription" LineBreakMode="WordWrap" Text="Click the &quot;View Template&quot; button to view the input PowerPoint presentation file. Please note that a PowerPoint-compatible viewer is required to open and view the PowerPoint presentation file."
                  VerticalOptions="Center" TextColor="Black" Margin="0,0,10,0">
            </Label>
            <Label x:Name="label2" Text=" "></Label>
            <Label x:Name="generateButtonDescription" LineBreakMode="WordWrap" Text="Click the &quot;Convert To PDF&quot; button to view the converted PDF file . Please note that a PDF-compatible viewer is required to open and view the PDF document."
                  VerticalOptions="Center" TextColor="Black" Margin="0,0,10,0">
            </Label>
            <Label x:Name="label3" Text=" "></Label>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
                <Button x:Name="btnViewTemplate" Clicked ="OnButtonClickedView" Text ="View Template" HorizontalOptions="Start" ></Button>
                <Button x:Name="btnGenerateDocument" Clicked ="OnButtonClicked" Text ="Convert To PDF" HorizontalOptions="Start" ></Button>
            </StackLayout>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>
