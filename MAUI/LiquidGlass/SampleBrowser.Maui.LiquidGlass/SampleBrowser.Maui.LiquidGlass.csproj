    <PackageReference Include="Syncfusion.Maui.Expander" version="32.1.19" />
    <PackageReference Include="Syncfusion.Maui.GridCommon" version="32.1.19" />
    <PackageReference Include="Syncfusion.Maui.ImageEditor" version="32.1.19" />
