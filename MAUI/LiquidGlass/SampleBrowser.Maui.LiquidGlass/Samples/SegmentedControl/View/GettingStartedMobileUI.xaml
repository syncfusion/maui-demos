<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:local="clr-namespace:SampleBrowser.Maui.LiquidGlass.SfSegmentedControl"
                      xmlns:imageExtension="clr-namespace:SampleBrowser.Maui.Base.Converters;assembly=SampleBrowser.Maui.Base"
                      xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
                      x:DataType="local:GettingStartedViewModel"
                      xmlns:thickness ="clr-namespace:Microsoft.Maui;assembly=Microsoft.Maui"
                      x:Class="SampleBrowser.Maui.LiquidGlass.SfSegmentedControl.GettingStartedMobileUI">

    <localCore:SampleView.Resources>
        <imageExtension:SfImageSourceConverter x:Key="imageconverter"/>
        <Color x:Key="SegmentSelectionTextColorLight">#0088FF</Color>
        <Color x:Key="SegmentTextColorLight">#99603C43</Color>
        <Color x:Key="SegmentStrokeLight">#1F000000</Color>
        <Color x:Key="SegmentBackgroundLight">#EDEDED</Color>
        <Color x:Key="SegmentSelectionBackgroundLight">#19F2F2F7</Color>
        <Color x:Key="SegmentSelectionTextColorDark">#0091FF</Color>
        <Color x:Key="SegmentTextColorDark">#99EBEBF5</Color>
        <Color x:Key="SegmentStrokeDark">#2BFFFFFF</Color>
        <Color x:Key="SegmentBackgroundDark">#121212</Color>
        <Color x:Key="SegmentSelectionBackgroundDark">#19FFFFFF</Color>
    </localCore:SampleView.Resources>

    <localCore:SampleView.BindingContext>
        <local:GettingStartedViewModel />
    </localCore:SampleView.BindingContext>

    <localCore:SampleView.Content>
        <ScrollView Orientation="Vertical">
            <Grid RowDefinitions="*">
                <StackLayout Margin="20,12,20,12" 
                             Spacing="5">
                    <Label Text="Elektro Voice Speaker"
                           FontFamily="RobotoMedium"
                           FontSize="22"
                           HorizontalTextAlignment="Start"/>
                    <Label Text="Unleash the Power of Music!"
                           FontSize="15"
                           Opacity="0.5"
                           MaxLines="2"
                           FontFamily="Roboto"
                           LineBreakMode="WordWrap"
                           LineHeight="1.3"
                           HorizontalTextAlignment="Start"/>
                    <StackLayout  Grid.Column="0" 
                                  Grid.Row="1" 
                                  Margin="0,30,0,0"
                                  VerticalOptions="Start" >
                        <Image Source="{Binding Image,Converter={StaticResource imageconverter}}" HeightRequest="320" VerticalOptions="Center"/>
                    </StackLayout>

                    <Label Text="{Binding TotalPrice}"
                           FontFamily="RobotoMedium"
                           FontSize="22"/>
                    <StackLayout Margin="0,12,0,0"
                                 Spacing="10">
                        <Label FontFamily="RobotoMedium"
                               Text="Pick a Color" 
                               Margin="2,0,0,0"/>
                        <buttons:SfSegmentedControl x:Name="segmentedControlColorOption"
                                                    SegmentCornerRadius="19"
                                                    HorizontalOptions="Start"
                                                    EnableLiquidGlassEffect="True"
                                                    Stroke="{AppThemeBinding Light={StaticResource SegmentStrokeLight}, Dark={StaticResource SegmentStrokeDark}}"
                                                    Background="{AppThemeBinding Light={StaticResource SegmentBackgroundLight}, Dark={StaticResource SegmentBackgroundDark}}"
                                                    StrokeThickness="1"
                                                    SelectedIndex="{Binding SelectedColoredIndex, Mode=TwoWay}"
                                                    ItemsSource="{Binding SpeakerColorOptionsInfo}">
                            <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                <buttons:SelectionIndicatorSettings 
                                        TextColor="{AppThemeBinding Light={StaticResource SegmentSelectionTextColorLight}, Dark={StaticResource SegmentSelectionTextColorDark}}"
                                        Background="{AppThemeBinding Light={StaticResource SegmentSelectionBackgroundLight}, Dark={StaticResource SegmentSelectionBackgroundDark}}"/>
                            </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl>
                    </StackLayout>

                    <StackLayout Margin="0,12,0,0"
                                 Spacing="10">
                        <Label Text="Extended Warranty"
                               Margin="2,0,0,0"
                               FontFamily="RobotoMedium"/>
                        <buttons:SfSegmentedControl x:Name="segmentedControlWarrantyOption"
                                                    SegmentCornerRadius="19"
                                                    HorizontalOptions="Start"
                                                    EnableLiquidGlassEffect="True"
                                                    Stroke="{AppThemeBinding Light={StaticResource SegmentStrokeLight}, Dark={StaticResource SegmentStrokeDark}}"
                                                    Background="{AppThemeBinding Light={StaticResource SegmentBackgroundLight}, Dark={StaticResource SegmentBackgroundDark}}"
                                                    SegmentWidth="103"
                                                    ItemsSource="{Binding SpeakerWarrantyOptionsInfo}"
                                                    SelectedIndex="{Binding SelectedWarrantyOption, Mode=TwoWay}"
                                                    StrokeThickness="1">
                            <buttons:SfSegmentedControl.TextStyle>
                                <buttons:SegmentTextStyle FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SegmentTextColorLight}, Dark={StaticResource SegmentTextColorDark}}"
                                                          FontFamily="Roboto-Regular" />
                            </buttons:SfSegmentedControl.TextStyle>
                            <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                <buttons:SelectionIndicatorSettings 
                                        TextColor="{AppThemeBinding Light={StaticResource SegmentSelectionTextColorLight}, Dark={StaticResource SegmentSelectionTextColorDark}}"
                                        Background="{AppThemeBinding Light={StaticResource SegmentSelectionBackgroundLight}, Dark={StaticResource SegmentSelectionBackgroundDark}}"/>
                            </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl>
                    </StackLayout>

                    <StackLayout Margin="0,12,0,0" 
                                 Spacing="10">
                        <HorizontalStackLayout>
                            <Label Text="Delivery Options"
                                   FontFamily="RobotoMedium"/>
                            <Label Text="{Binding Date}" 
                                   FontFamily="Roboto"
                                   Opacity="0.5"/>
                        </HorizontalStackLayout>
                        <buttons:SfSegmentedControl x:Name="segmentedControlDeliveryOption"
                                                    CornerRadius="30"
                                                    SegmentCornerRadius="15"
                                                    StrokeThickness="1"
                                                    SegmentHeight="30"
                                                    HorizontalOptions="Start"
                                                    EnableLiquidGlassEffect="True"
                                                    Stroke="{AppThemeBinding Light={StaticResource SegmentStrokeLight}, Dark={StaticResource SegmentStrokeDark}}"
                                                    Background="{AppThemeBinding Light={StaticResource SegmentBackgroundLight}, Dark={StaticResource SegmentBackgroundDark}}"
                                                    WidthRequest="302"
                                                    ItemsSource="{Binding SpeakerDeliveryOptionsInfo}"
                                                    SelectedIndex="{Binding SelectedDeliveryOption, Mode=TwoWay}">
                            <buttons:SfSegmentedControl.TextStyle>
                                <buttons:SegmentTextStyle FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SegmentTextColorLight}, Dark={StaticResource SegmentTextColorDark}}"
                                                          FontFamily="Roboto" />
                            </buttons:SfSegmentedControl.TextStyle>
                            <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                <buttons:SelectionIndicatorSettings 
                                        TextColor="{AppThemeBinding Light={StaticResource SegmentSelectionTextColorLight}, Dark={StaticResource SegmentSelectionTextColorDark}}"
                                        Background="{AppThemeBinding Light={StaticResource SegmentSelectionBackgroundLight}, Dark={StaticResource SegmentSelectionBackgroundDark}}"/>
                            </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl>
                    </StackLayout>
                    <StackLayout Grid.Row="1"
                                 Margin="0,10,0,0">
                        <Border HeightRequest="1" 
                              StrokeThickness="1"
                              VerticalOptions="Start"
                              Background="LightGray"/>
                        <buttons:SfSegmentedControl x:Name="segmentedControlResultsOption"
                                                    ItemsSource="{Binding SpeakerResultsOptionInfo}"
                                                    VisibleSegmentsCount="1"
                                                    SegmentCornerRadius="19"
                                                    Stroke="{AppThemeBinding Light={StaticResource SegmentStrokeLight}, Dark={StaticResource SegmentStrokeDark}}"
                                                    Background="{AppThemeBinding Light={StaticResource SegmentBackgroundLight}, Dark={StaticResource SegmentBackgroundDark}}"
                                                    Margin="0,12,0,0"
                                                    HorizontalOptions="Fill"
                                                    EnableLiquidGlassEffect="True"
                                                    SelectedIndex="0" >
                            <buttons:SfSegmentedControl.TextStyle>
                                <buttons:SegmentTextStyle FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SegmentTextColorLight}, Dark={StaticResource SegmentTextColorDark}}"
                                                          FontFamily="Roboto" />
                            </buttons:SfSegmentedControl.TextStyle>
                            <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                <buttons:SelectionIndicatorSettings 
                                        TextColor="{AppThemeBinding Light={StaticResource SegmentSelectionTextColorLight}, Dark={StaticResource SegmentSelectionTextColorDark}}"
                                        Background="{AppThemeBinding Light={StaticResource SegmentSelectionBackgroundLight}, Dark={StaticResource SegmentSelectionBackgroundDark}}"/>
                            </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                        </buttons:SfSegmentedControl>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </ScrollView>
    </localCore:SampleView.Content>
</localCore:SampleView>