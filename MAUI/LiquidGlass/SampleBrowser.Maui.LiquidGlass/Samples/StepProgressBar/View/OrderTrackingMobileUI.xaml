<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.LiquidGlass.SfStepProgressBar.OrderTrackingMobileUI"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:local="clr-namespace:SampleBrowser.Maui.LiquidGlass.SfStepProgressBar"
                      xmlns:imageExtention="clr-namespace:SampleBrowser.Maui.Base.Converters;assembly=SampleBrowser.Maui.Base"
                      xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:progressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
                      xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons">

    <localCore:SampleView.Resources>
        <Style x:Key="labelStyle"
               TargetType="Label">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Default={StaticResource ContentForeground}}" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="FontFamily"
                    Value="Roboto" />
            <Setter Property="FontAttributes"
                    Value="Bold" />

        </Style>
        <Style x:Key="labelStyle1"
               TargetType="Label">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Default={StaticResource ContentForegroundAlt1}}" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>
    </localCore:SampleView.Resources>

    <localCore:SampleView.BindingContext>
        <local:StepProgressBarViewModel x:Name="viewModel" />
    </localCore:SampleView.BindingContext>

    <localCore:SampleView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.45*" />
                <ColumnDefinition Width="0.55*" />
            </Grid.ColumnDefinitions>

            <Grid IsClippedToBounds="True"
                  IsVisible="{OnPlatform WinUI=True, MacCatalyst=True, Default=False}"
                  RowDefinitions="40, 60, *"
                  Margin="0,40"
                  HeightRequest="{OnPlatform MacCatalyst=430}"
                  VerticalOptions="{OnPlatform Default=Fill, WinUI=Center}">
                <Image Source="{imageExtention:SfImageResource gettingstarted.png}"
                       Aspect="AspectFit"
                       Margin="50, 0, 0, 0"
                       VerticalOptions="{OnPlatform WinUI=Center}"
                       Grid.Row="2" />
            </Grid>
            <Border Padding="0"
                    Margin="0"
                    Stroke="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource Border}}"
                    BackgroundColor="Transparent"
                    Grid.ColumnSpan="{OnPlatform Default=2, WinUI=1, MacCatalyst=1}"
                    Grid.Column="{OnPlatform Default=0, WinUI=1, MacCatalyst=1}"
                    VerticalOptions="{OnPlatform Default=Fill, WinUI=Fill, MacCatalyst=Fill}"
                    WidthRequest="{OnPlatform WinUI=400, MacCatalyst=450}"
                    HeightRequest="{OnPlatform MacCatalyst=650}"
                    HorizontalOptions="{OnPlatform WinUI=Fill, MacCatalyst=Fill, Default=Fill}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="{OnPlatform Default=0, WinUI=10, MacCatalyst=10}" />
                </Border.StrokeShape>

                <core:SfGlassEffectView EffectType="Regular">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.08*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="0.19*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Text="Out for Delivery"
                           Padding="0,10,0,0"
                           Style="{StaticResource labelStyle}"
                           HorizontalOptions="Center" />
                    <BoxView Grid.Row="1"
                             HeightRequest="1"
                             BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                             HorizontalOptions="Fill" />

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>

                        <Image Source="{imageExtention:SfImageResource redshoe-04.png}"
                               Grid.Column="0" />

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                                   Padding="0,5,0,0"
                                   Text="Footy Day Athletic Shoes"
                                   LineBreakMode="WordWrap"
                                   Style="{StaticResource labelStyle}" />
                            <Label Grid.Row="1"
                                   Padding="0,5,0,0"
                                   Text="Seller: FASHION FOOTY WEARS PVT. LTD."
                                   Style="{StaticResource labelStyle1}" />

                            <HorizontalStackLayout Grid.Row="2">
                                <Label Text="$319"
                                       FontSize="20"
                                       Style="{StaticResource labelStyle}" />
                                <Label Text="19% off"
                                       Padding="5,3,0,0"
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Default={StaticResource SuccessForeground}}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Grid>

                    <BoxView Grid.Row="3"
                             HeightRequest="1"
                             BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                             HorizontalOptions="Fill" />

                    <ScrollView Grid.Row="4"
                                Orientation="Vertical"
                                VerticalScrollBarVisibility="Never">
                        <progressBar:SfStepProgressBar x:DataType="local:StepProgressBarViewModel"
                                                       ItemsSource="{Binding ShipmentInfoCollection}"
                                                       Orientation="Vertical"
                                                       x:Name="stepProgress"
                                                       Margin="24,0,0,0"
                                                       LabelSpacing="12"
                                                       ProgressAnimationDuration="2000"
                                                       ActiveStepIndex="2"
                                                       ActiveStepProgressValue="50"
                                                       ShowToolTip="True">
                            <progressBar:SfStepProgressBar.CompletedStepSettings>
                                <progressBar:StepSettings ProgressColor="{AppThemeBinding Default={StaticResource PrimaryBackground}}">
                                    <progressBar:StepSettings.TextStyle>
                                        <progressBar:StepTextStyle TextColor="{AppThemeBinding Default={StaticResource ContentForeground}}"
                                                                   FontAttributes="Bold" />
                                    </progressBar:StepSettings.TextStyle>
                                </progressBar:StepSettings>
                            </progressBar:SfStepProgressBar.CompletedStepSettings>
                            <progressBar:SfStepProgressBar.InProgressStepSettings>
                                <progressBar:StepSettings ProgressColor="{AppThemeBinding Default={StaticResource PrimaryBackground}}">
                                    <progressBar:StepSettings.TextStyle>
                                        <progressBar:StepTextStyle TextColor="{AppThemeBinding Default={StaticResource ContentForeground}}"
                                                                   FontAttributes="Bold" />
                                    </progressBar:StepSettings.TextStyle>
                                </progressBar:StepSettings>
                            </progressBar:SfStepProgressBar.InProgressStepSettings>
                            <progressBar:SfStepProgressBar.NotStartedStepSettings>
                                <progressBar:StepSettings ProgressColor="{AppThemeBinding Default={StaticResource PrimaryBackground}}" />
                            </progressBar:SfStepProgressBar.NotStartedStepSettings>
                            <progressBar:SfStepProgressBar.StepTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <core:SfGlassEffectView WidthRequest="32"
                                                                HeightRequest="32"
                                                                CornerRadius="16">
                                            <Border BackgroundColor="{AppThemeBinding Default={StaticResource PrimaryBackground}}"
                                                    Margin="0.5">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="15" />
                                                </Border.StrokeShape>
                                                <Label Text="&#xe70c;"
                                                       FontFamily="MauiMaterialAssets"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="White"
                                                       FontSize="20" />
                                            </Border>
                                        </core:SfGlassEffectView>
                                    </Grid>
                                </DataTemplate>
                            </progressBar:SfStepProgressBar.StepTemplate>

                            <progressBar:SfStepProgressBar.PrimaryTextTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout WidthRequest="300"
                                                         HeightRequest="{OnPlatform Android=105, iOS=80}"
                                                         x:DataType="progressBar:StepProgressBarItem">
                                        <Label LineBreakMode="WordWrap"
                                               HorizontalTextAlignment="Start">
                                            <Label.FormattedText>
                                                <Binding Path="PrimaryFormattedText"/>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </progressBar:SfStepProgressBar.PrimaryTextTemplate>
                        </progressBar:SfStepProgressBar>
                    </ScrollView>
                </Grid>
                </core:SfGlassEffectView>
            </Border>
        </Grid>
    </localCore:SampleView.Content>
</localCore:SampleView>