<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.SfCartesianChart.SplineAreaChart"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.SfCartesianChart"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Core;assembly=SampleBrowser.Maui.Core"
                       xmlns:chart="http://schemas.syncfusion.com/maui">
    <localCore:SampleView.Content>

        <localCore:ScrollViewExt>
            <VerticalStackLayout BackgroundColor="White">
                <localCore:CardViewExt Title="Default Spline Area" x:Name="extendedCard1" HeightRequest="400" HorizontalOptions="FillAndExpand">
                    <localCore:CardViewExt.MainContent>
                        <chart:SfCartesianChart x:Name="Chart" Palette="Custom" CustomBrushes="{Binding CustomBrushes}" MinimumHeightRequest ="310" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <chart:SfCartesianChart.BindingContext>
                                <local:SplineAreaSeriesViewModel/>
                            </chart:SfCartesianChart.BindingContext>
                            <chart:SfCartesianChart.Legend>
                                <chart:ChartLegend ToggleSeriesVisibility="True"/>
                            </chart:SfCartesianChart.Legend>
                            <chart:SfCartesianChart.Title>
                                <Label Text="Inflation Rate in Percentage" Margin="0" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="16" TextColor="Black"/>
                            </chart:SfCartesianChart.Title>

                            <chart:SfCartesianChart.PrimaryAxis>
                                <chart:NumericalAxis Interval="2" EdgeLabelsDrawingMode="Shift" ShowMajorGridLines="false">
                                    <chart:NumericalAxis.MajorTickStyle>
                                        <chart:ChartAxisTickStyle TickSize="8">
                                        </chart:ChartAxisTickStyle>
                                    </chart:NumericalAxis.MajorTickStyle>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.PrimaryAxis>
                            <chart:SfCartesianChart.SecondaryAxis>
                                <chart:NumericalAxis Maximum="12" Minimum="0" Interval="2" >
                                    <chart:NumericalAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle LabelFormat="0'%" x:Name="secondaryAxisLabelStyle"/>
                                    </chart:NumericalAxis.LabelStyle>
                                    <chart:NumericalAxis.AxisLineStyle>
                                        <chart:ChartLineStyle StrokeWidth="0">
                                        </chart:ChartLineStyle>
                                    </chart:NumericalAxis.AxisLineStyle>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.SecondaryAxis>

                            <chart:SfCartesianChart.Series>
                                <chart:SplineAreaSeries Label="India" ShowTooltip="True" EnableAnimation="True" Stroke="#314A6E" StrokeWidth="2" ItemsSource="{Binding SplineAreaData1}" XBindingPath="Value1" YBindingPath="Value" >
                                </chart:SplineAreaSeries>

                                <chart:SplineAreaSeries Label="China" ShowTooltip="True" EnableAnimation="True" Stroke="#48988B" StrokeWidth="2" ItemsSource="{Binding SplineAreaData1}" XBindingPath="Value1" YBindingPath="Size">
                                </chart:SplineAreaSeries>
                            </chart:SfCartesianChart.Series>
                        </chart:SfCartesianChart>

                    </localCore:CardViewExt.MainContent>
                </localCore:CardViewExt>
        </VerticalStackLayout>
        </localCore:ScrollViewExt>
    </localCore:SampleView.Content>
</localCore:SampleView>
